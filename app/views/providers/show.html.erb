<% provide(:title, @provider.name) %>

<div class="well">

   <div class="row-fluid">
         <div class="span5">
             <div class="smart_label"  >
              <ul>
                  <li><h1><%= @provider.name %></h1> </li>
                  <li>
                    <% if @provider.subcontrax_member==true %>
                        <% if  @provider.id.in? current_user.organization.provider_ids %>
                            <!--Archive is already at the bottom-->
                         <% else %>
                            <%= form_for(current_user.organization.agreements.build(provider_id: @provider.id)) do |f| %>
                            <div><%= f.hidden_field :provider_id %></div>
                            <%= f.submit "Add Member", class: "btn btn-large btn-primary" %>
                            <% end %>
                        <% end %>
                  <% else %>
                        <%= link_to 'Send Invite' , new_provider_path, :class => 'btn btn-large btn-info' %>
                  <% end %>
                </li>
              </ul>
             </div>
        </div>
    </div>


    <div class="row-fluid">
      <div class="span5">
            <table class="table table-striped table-condensed">
                <tbody>
                     <tr>
                        <td>Company:</td>
                        <td><h4><%= @provider.company %></h4></td>
                     </tr>
                     <tr>
                        <td>Address:</td>
                        <td><h4><%= @provider.address1 %> <%= @provider.address2 %></h4></td>
                     </tr>
                     <tr>
                        <td>City:</td>
                        <td><h4><%= @provider.city %></h4></td>
                      </tr>
                      <tr>
                        <td>State:</td>
                        <td><h4><%= @provider.state %></h4></td>
                      </tr>
                      <tr>
                        <td>Country:</td>
                        <td><h4><%= @provider.country %></h4></td>
                      </tr>
                      <tr>
                        <td>Zip:</td>
                        <td><h4><%= @provider.zip %></h4></td>
                      </tr>
                      <tr>
                        <td>Phone:</td>
                        <td><h4><%= @provider.phone %></h4></td>
                      </tr>
                      <tr>
                        <td>Mobile Phone:</td>
                        <td><h4><%= @provider.mobile %></h4></td>
                      </tr>
                      <tr>
                        <td>Email:</td>
                        <td><h4><%= @provider.email %></h4></td>
                      </tr>
                      <tr>
                        <td>Website:</td>
                        <td><h4><%= @provider.website %></h4></td>
                      </tr>
                      <tr>
                        <td>Roles:</td>
                        <td>
                          <% for role in @provider.organization_roles %>
                             <table>
                                <tbody>
                                   <tr>
                                      <span class="label label-info"><%= role.name %></span>
                                   </tr>
                                 </tbody>
                             </table>
                         <% end %>
                        </td>
                      </tr>
                </tbody>
            </table>

     </div>
  </div>


  <div class="form-actions">
      <% if @provider.subcontrax_member==true %>
          <%= link_to 'Back', providers_path, :class => 'btn btn-medium' %>
          <% if  @provider.id.in? current_user.organization.provider_ids %>
                <%= link_to 'Archive', providers_path(@provider), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>
          <% end %>

      <% else %>
          <%= link_to 'Back', providers_path, :class => 'btn btn-medium' %>
          <%= link_to 'Edit', edit_provider_path(@provider), :class => 'btn btn-medium btn-primary' %>
          <%= link_to 'Archive', providers_path(@provider), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>
      <% end %>
  </div>


  <ul class="accordion">
    <li>
      <a class="head" href="href1">Header 1</a>
      <ul>
        <li><a href="href2">Item 1</a></li>
        <li><a href="href3">Item 2</a></li>
      </ul>
    </li>
    <li>
      <a class="head" href="href4">Header 2</a>
      <ul>
        <li><a href="href5">Item 3</a></li>
      </ul>
    </li>
  </ul>









</div>
