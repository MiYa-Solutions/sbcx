<% provide(:title, "Edit " + @provider.name + "'s info") %>

<%= simple_form_for @provider, url: provider_url(@provider), :html => { :class => 'form-horizontal' } do |f| %>


    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to 'Back', provider_path, "class" => "ui-btn-up-c", "data-role" => "button", "data-icon" => "arrow-l", "data-iconpos" => "left" %>
      </div>
      <div class="ui-block-b">
        <div class="miya_blue_button">
          <%= f.submit "Save", "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_provider_btn', "data-icon" => "check", "data-iconpos" => "left" %>
        </div>
      </div>
    </fieldset>


    <%= render 'fields', f: f %>

<% end %>
