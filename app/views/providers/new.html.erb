<%= provide(:title, 'New Provider') %>

<div class="well">

  <div class="row">
    <div class="span3">
      <h3>New Provider</h3>
    </div>
  </div>

  <div class="row">

      <%= simple_form_for @provider, url: providers_url, :html => {:class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>

        <div class="control-group string required">
          <div class="controls">
            <%= f.submit t('providers.buttons.create_provider'), class: "btn btn-large btn-primary" %>
          </div>
        </div>
      <% end %>

  </div>

</div>
