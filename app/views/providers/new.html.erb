<%= provide(:title, 'New Provider') %>
    <div class="well">
    <%= simple_form_for @provider, url: providers_url, :html => {:class => 'form-horizontal'} do |f| %>

        <div class="row-fluid">
            <div class="no_margins">

              <div class="span6">

                <div class="smart_label">
                  <h1>Enter New Provider details:</h1>
                </div>
                <br>
                <% if f.object.errors.any? %>
                    <div class="alert alert-block alert-error">
                      <a class="close" data-dismiss="alert" href="#">Ã—</a>
                      <%= render 'shared/error_messages', object: f.object %>
                    </div>
                <% end %>
                <%= render 'fields', f: f %>

                <div class="form-actions">
                  <%= link_to 'Back', providers_path, :class => 'btn btn-medium' %>
                  <%= f.submit t('providers.buttons.create_provider'), class: "btn btn-medium btn-primary", id: 'create_provider_btn' %>
                </div>

              </div>
              <div class="span6">

                <div class="smart_label">
                  <h1>Add Agreements:</h1>
                </div>
                <br>

                    <%= render 'agreements/form', f: f %>



              </div>


            </div>
        </div>


<% end %>
</div>