<% provide(:title, "Edit Provider") %>

<div class="well">
  <div class="row">
    <div class="span3">
      <h3>Edit Provider Contact:</h3>
    </div>
  </div>

  <div class="row">
    <div class="span10 ">
      <div class="form-actions">


    <%= simple_form_for @provider, url: provider_url(@provider), :html => {:class => 'form-horizontal' } do |f| %>
        <%= render 'fields', f: f %>

            <div class="form-actions">
              <%= link_to 'Back', providers_path, :class => 'btn btn-large' %>
              <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
            </div>
    <% end %>

      </div>
    </div>
  </div>
</div>


