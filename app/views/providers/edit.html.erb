<% provide(:title, "Edit Provider") %>

<div class="well">
  <div class="edit_provider">

  <div class="row-fluid">
        <div class="span6">
            <div class="smart_label">
             <ul>
               <li><h1>Edit <%= @provider.name %> Info</h1></li>
               <li></li>
             </ul>
            </div>
        </div>

        <div class="span6">
          <div class="smart_label">
            <ul>
              <li><h1>Agreements</h1></li>
              <li></li>
            </ul>
          </div>
        </div>

  </div>

  <br>

  <%= simple_form_for @provider, url: provider_url(@provider), :html => { :class => 'form-horizontal' } do |f| %>

    <div class="row-fluid">
          <% if f.object.errors.any? %>
              <div class="alert alert-block alert-error">
                <a class="close" data-dismiss="alert" href="#">Ã—</a>
                <%= render 'shared/error_messages', object: f.object %>
              </div>
          <% end %>
    </div>

    <div class="row-fluid">

         <div class="span6 ">
            <%= render 'fields', f: f %>
         </div>

        <div class="span6 ">
              <%= f.simple_fields_for :agreements do |builder| %>
                  <%= render 'agreements/fields', f: builder %>
              <% end %>
         </div>
    </div>

    <div class="row-fluid">
          <div class="form-actions">
            <%= link_to 'Back', providers_path, :class => 'btn btn-medium' %>
            <%= f.submit "Save Changes", class: "btn btn-medium btn-primary", id: 'save_provider_btn' %>
          </div>
    </div>

  <% end %>


  </div>
</div>