<div class="well">

  <div class="smart_label">
    <ul>
      <li><h1>My Providers</h1></li>
      <li>
        <%= form_tag providers_path, id: "agreement_search_form", :method => :get, :remote => true do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil, class: 'btn btn-medium', :id => 'provider-search-button' %>
        <% end %>
      </li>
      <li>
        <p>Search for local Providers and SubConTraX members</p>
      </li>
      <li>
        <%= link_to 'New Provider', new_provider_path, :class => 'btn btn-primary', id: 'new-provider-button' %>
      </li>
    </ul>
  </div>

  <br>

  <table class="table table-striped" id="providers_search_results">
      <% if ! @providers.empty? %>
        <br>
            <thead>
            <tr>
              <th>Name</th>
              <th>Company</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
            </thead>
     <% else %>
              <span class="alert alert-info" id="empty_search_result_notice">No records, click "New Provider" to add new contact</span>
                <br>
                <br>
    <% end %>


          <tbody id="new_providers">
          <% @providers.each do |provider| %>
              <%= render provider %>
          <% end %>

          </tbody>
          </table>

          <%= will_paginate @providers, :class => 'pagination pagination-centered' %>

  <div class="miya_table_row">
              <span class="member_label">
                    <badge><i class="icon-user icon-white"></i></badge>
               </span><span> &nbsp;</span>
    <span class="miya_blue_note"> SubConTraX Member</span>
  </div>
</div>