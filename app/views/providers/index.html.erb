<%= form_tag providers_path, id: "agreement_search_form", :method => :get, :remote => true do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>


<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Company</th>
    <th></th>
    <th></th>
  </tr>
  <% @new_providers.each do |provider| %>
      <tr>
        <%= render provider %>
      </tr>
  <% end %>
</table>

<p><%= link_to t('providers.buttons.create_provider'), new_provider_path, class: 'btn' %></p>
