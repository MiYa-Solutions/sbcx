<div class="well">

  <div class="row" style="padding-left: 15px" >
    <div class="label" style="font-size: 18pt; height: 32px; padding-top: 5px" >

      <div class="span3" style="padding-top: 5px">
        My Providers
      </div>

      <div class="span5">
        <%= form_tag providers_path, id: "agreement_search_form", :method => :get, :remote => true do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :name => nil %>
            </p>
        <% end %>
      </div>

      <div class="span3" align="center" style="padding-left: 1px">
             <%= link_to 'New Provider', new_provider_path, :class => 'btn btn-primary' %>
      </div>
  </div>
  </div>


<% if @new_providers.empty? %>
      <span class="label">No records, click "Add Provider" to add new contact</span>
<% else %>

    <table class="table table-striped" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Company</th>
          <th>Phone</th>
          <th>SubConTrax Member</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="new_providers">
          <% @new_providers.each do |provider| %>
              <%= render provider %>
          <% end %>

      </tbody>
      </table>
      <%= will_paginate @new_providers, :class => 'pagination pagination-centered' %>

<% end %>

</div>