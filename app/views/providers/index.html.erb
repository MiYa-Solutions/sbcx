<%= form_tag providers_path, id: "agreement_search_form", :method => :get, :remote => true do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>


<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Company</th>
    <th></th>
    <th></th>
  </tr>
  <div id="new_providers">
    <% @new_providers.each do |provider| %>
        <tr>
          <%= render provider %>
        </tr>
    <% end %>
  </div>
</table>

<p><%= link_to "New Provider", new_provider_path, class: 'btn' %></p>
