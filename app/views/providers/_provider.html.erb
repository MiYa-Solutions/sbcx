<tr>
  <td><%= provider.id %></td>
  <td><%= link_to provider.name, provider_path(provider) %></td>
  <td><%= provider.company %></td>
  <td><%= link_to "Show", providers_path(provider) %></td>
  <td><%= link_to "Edit", edit_provider_path(provider) %></td>
  <%= form_for(current_user.organization.agreements.build(provider_id: provider.id)) do |f| %>
      <div><%= f.hidden_field :provider_id %></div>
      <%= f.submit "Add", class: "btn btn-large btn-primary" %>
  <% end %>
</tr>
