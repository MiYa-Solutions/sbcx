<tr>
  <td><%= link_to provider.name, provider_path(provider) %>
    <% if provider.subcontrax_member==true %>
        <span class="member_label">
          <badge>Member</badge>
        </span>
    <% end %>
  </td>
  <td><%= provider.company %></td>
  <td><%= provider.phone %></td>
  <td><%= provider.email %></td>

  <td  >
    <% if provider.subcontrax_member==true %>
         <div class="row-fluid">
          <%= form_for current_user.organization.agreements.build(provider_id: provider.id), :html => {:class => 'add_member'} do |f| %>
              <%= f.hidden_field :provider_id %>
              <%= f.submit "Add", class: "btn btn-small btn-success" %>
          <% end %>
          <%= link_to 'Archive', provider_path(provider), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-small btn-danger' %>
         </div>
  <% else %>

        <%= link_to 'Edit', edit_provider_path(provider), :class => 'btn btn-small' %>
        <%= link_to 'Archive', provider_path(provider), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-small btn-danger' %>
        <%= link_to 'Send Invite' , new_provider_path, :class => 'btn btn-success' %>


  <% end %>

  </td  >
</tr>

