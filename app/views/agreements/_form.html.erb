<%= simple_form_for @agreement, as: :agreement, url: agreement_url(@agreement), :html => { :class => 'form-horizontal' } do |f| %>

    <% if f.object.errors.any? %>
        <div class="alert alert-block alert-error">
          <a class="close" data-dismiss="alert" href="#">x</a>
          <%= render 'shared/error_messages', object: f.object %>
        </div>
    <% end %>

    <%= render 'agreements/fields', f: f, agreement_type: @agreement.class.name %>


    <div class="form-actions">
      <%= link_to I18n.t('general.general.back'), agreement_path, :class => 'btn btn-medium' %>
      <%= f.submit I18n.t('general.general.update_agreement'), class: "btn btn-medium btn-primary", id: 'update_agreement_btn' %>
    </div>
    <!--<p><#%= f.submit %></p>-->
<% end %>
