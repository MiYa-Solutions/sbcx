<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title><%= I18n.t('notification_mailer.agr_change_submitted_notification.subject').html_safe %></title>
  <%= render 'styling' %>
</head>

<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0">

<table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable">
  <tr>
    <td align="center" valign="top" style="padding-top:20px;">
      <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateContainer">
        <tr>
          <td align="center" valign="top">
            <!-- // Begin Template Header \\ -->
            <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateHeader">
              <tr>
                <td class="headerContent">
                  <!-- // Begin Module: Standard Header Image \\ -->
                  <img src="http://www.subcontrax.com/assets/LogoImg.png" style="max-width:600px;" id="headerImage campaign-icon"/>
                  <!--<#%= image_tag 'LogoImg.png', style: 'max-width:600px', id: "headerImage campaign-icon" %>-->
                  <!-- // End Module: Standard Header Image \\ -->

                </td>
              </tr>
            </table>
            <!-- // End Template Header \\ -->
          </td>
        </tr>
        <tr>
          <td align="center" valign="top">
            <!-- // Begin Template Body \\ -->
            <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody">
              <tr>
                <td valign="top">

                  <!-- // Begin Module: Standard Content \\ -->
                  <table border="0" cellpadding="20" cellspacing="0" width="100%">
                    <tr>
                      <td valign="top" class="bodyContent">
                        <div>
                          <h4 class="h4"><%= I18n.t('notification_mailer.agr_change_submitted_notification.title').html_safe %></h4>
                          <%= I18n.t('general.emails.dear').html_safe %>&nbsp;<%= "#{@user.first_name} #{@user.last_name}" %>
                          ,<br>
                          <%= I18n.t('notification_mailer.agr_change_submitted_notification.content').html_safe %>&nbsp;<strong><%= @agreement.creator.name.html_safe %></strong>.<br>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td valign="top" style="padding-top:0; padding-bottom:0;">
                        <table border="0" cellpadding="10" cellspacing="0" width="100%" class="templateDataTable">
                          <tr>
                            <th scope="col" valign="top" width="40%" class="dataTableHeading">
                              <%= @agreement.class.human_attribute_name(:name) %>
                            </th>
                            <th scope="col" valign="top" width="60%" class="dataTableHeading">
                              <%= @agreement.name %>
                            </th>
                          </tr>
                          <tr>
                            <td valign="top" class="dataTableContent">
                              <%= @agreement.class.human_attribute_name(:id) %>
                            </td>
                            <td valign="top" class="dataTableContent">
                              <strong><%= @agreement.id %></strong>
                            </td>
                          </tr>
                          <tr>
                              <td valign="top" class="dataTableContent">
                                <%= AgrChangeSubmittedEvent.human_attribute_name(:change_reason) %>
                            </td>
                             <td valign="top" class="dataTableContent">
                             <strong><%= @event.change_reason %></strong>
                            </td>
                          </tr>
                          <tr>
                          <td valign="top" class="dataTableContent">
                            <%= AgrChangeSubmittedEvent.human_attribute_name(:description) %>
                          </td>
                          <td valign="top" class="dataTableContent">
                            <strong><%= @event.description %></strong>
                          </td>
                          </tr>
                          <!--<tr>-->
                          <!--<td valign="top" class="dataTableContent">-->
                          <!--<#%= @agreement.class.human_attribute_name(:description) %>-->
                          <!--</td>-->
                          <!--<td valign="top" class="dataTableContent">-->
                          <!--<strong><#%= @agreement.description %></strong>-->
                          <!--</td>-->
                          <!--</tr>-->
                        </table>
                      </td>
                    </tr>
                    <tr>
                      <td valign="top" class="bodyContent">
                        <div>
                          <%= I18n.t('notification_mailer.agr_new_subcon_notification.bottom_content').html_safe %><%= @agreement.creator.name.html_safe %>
                          .
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td align="center" valign="top" style="padding-top:0;">
                        <table border="0" cellpadding="15" cellspacing="0" class="templateButton">
                          <tr>
                            <td valign="middle" class="templateButtonContent">
                              <div>
                                <!--<a href="http://www.mandrill.com/" target="_blank">More Details</a>-->
                                <%= link_to '<input class="btn btm-primary" type="button" value="More Details">'.html_safe, agreement_url(@agreement) %>

                              </div>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                  <!-- // End Module: Standard Content \\ -->
                </td>
              </tr>
            </table>
            <!-- // End Template Body \\ -->
          </td>
        </tr>
        <tr>
          <%= render 'footer' %>
        </tr>
      </table>
      <br>
    </td>
  </tr>
</table>

</body>

</html>