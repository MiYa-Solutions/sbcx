Dear <%= "#{@user.first_name} #{@user.last_name}" %>,
<% if @user.organization.users.include? @service_call.technician %>
    <%= I18n.t('notification_mailer.completed_service_call.content', technician: @service_call.technician.name, ref: @service_call.ref_id) %>
<% else %>
    <%= I18n.t('notification_mailer.completed_transferred_service_call.content', provider: @service_call.provider.name, ref: @service_call.ref_id) %>
<% end %>


<%= link_to "#{ServiceCall.name.humanize} #{@service_call.ref_id}", @service_call.becomes(ServiceCall) %>