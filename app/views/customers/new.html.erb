<%= provide(:title, 'New Customer') %>

<div class="well">

  <div class="row-fluid">
    <div class="span10">
      <div class="smart_label"  >
      <h1>New Customer</h1>
      </div>
    </div>
  </div>
  <br>

  <div class="row-fluid">
    <div class="span10 ">

      <%= simple_form_for @customer, :html => {:class => 'form-horizontal'} do |f| %>
          <%= render 'fields', f: f %>
          <div class="form-actions">
            <%= link_to 'Back', customers_path, :class => 'btn btn-medium' %>
            <%= f.submit "Create Customer", class: "btn btn-medium btn-primary" %>
          </div>

      <% end %>

    </div>
  </div>
</div>
