<%= provide(:title, 'New Customer') %>
<h1>New Customer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for [ @organization, @customer], :html => {:class => 'form-horizontal' } do |f| %>
        <%= render 'fields', f: f %>
        <div>
          <%= f.submit "Create Customer", class: "btn btn-large btn-primary" %>
        </div>
    <% end %>
  </div>
</div>