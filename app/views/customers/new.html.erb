<%= provide(:title, 'New Customer') %>

<div class="well">
  <div class="row">
    <div class="span3">
      <h3>New Customer</h3>
    </div>
  </div>

  <div class="row">
    <div class="offset1">

      <%= simple_form_for @customer, :html => {:class => 'form-horizontal'} do |f| %>
          <%= render 'fields', f: f %>
          <div class="offset2">
            <%= f.submit "Create Customer", class: "btn btn-large btn-primary" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
