<% provide(:title, I18n.t('general.general.edit').html_safe + "&nbsp;".html_safe + @customer.name + "'s info") %>


<%= simple_form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>


    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to 'Back', customer_path, "class" => "ui-btn-up-c", "data-role" => "button", "data-icon" => "arrow-l", "data-iconpos" => "left" %>
      </div>
      <div class="ui-block-b">
          <%= f.submit "Save", "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_provider_btn', "data-icon" => "check", "data-iconpos" => "left" %>
      </div>
    </fieldset>


    <%= render 'fields', f: f %>

    <br>

    <%= f.submit I18n.t('general.general.Save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_provider_btn', "data-icon" => "check", "data-iconpos" => "left" %>


<% end %>