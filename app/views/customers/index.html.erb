<div class="well">

  <div class="row" style="padding-left: 15px">
    <div class="label" style="font-size: 18pt; height: 32px; padding-top: 5px">

      <div class="span3" style="padding-top: 5px">
        My Customers
      </div>

      <div class="span5">
        <%= form_tag customers_path, id: "search_customer_form", :method => :get, :remote => true do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :name => nil %>
            </p>
        <% end %>
      </div>

      <div class="span3" align="center">
        <%= link_to 'Add Customer', new_customer_path, :class => 'btn btn-primary' %>
      </div>

    </div>
  </div>


  <% if @new_customers.empty? %>
      <span class="label">No records, click "Add Customer" to add new contact</span>

  <% else %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Address 1</th>
          <th>Address 2</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody id="new_customers">

        <% @new_customers.each do |customer| %>
            <%= render customer %>
        <% end %>
        </tbody>
      </table>

      <%= will_paginate @new_customers, :class => 'pagination pagination-centered' %>

  <% end %>

</div>

