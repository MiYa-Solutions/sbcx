<div class="well">

  <div class="smart_label"  >
      <ul>
        <li><h1>My Customers</h1></li>
        <li>
          <%= form_tag customers_path, id: "search_customer_form", :method => :get, :remote => true do %>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search", :name => nil, class: 'btn btn-medium' %>
          <% end %>
        </li>
        <li>
          <%= link_to 'Add Customer', new_customer_path, :class => 'btn btn-primary' %>
        </li>
      </ul>
    </div>
  <br>


<% if @new_customers.empty? %>
        <span class="alert alert-info">No records, click "Add Customer" to add new contact</span>

<% else %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody id="new_customers">

          <% @new_customers.each do |customer| %>
              <%= render customer %>
          <% end %>
          </tbody>
        </table>

        <%= will_paginate @new_customers, :class => 'pagination pagination-centered'  %>

<% end %>

</div>

