<% provide(:title, @customer.name) %>

<div class="row-fluid" xmlns="http://www.w3.org/1999/html">
  <div class="well">
    <h2 style="color: #0055CC"><%= @customer.name %></h2>


    <div class="row">
      <div class="span4">
        <table class="table table-striped table-condensed">
          <tbody>
          <tr>
            <td>Address:</td>
            <td><h4><%= @customer.address1 %> <%= @customer.address2 %></h4></td>
          </tr>
          <tr>
            <td>City:</td>
            <td><h4><%= @customer.city %></h4></td>
          </tr>
          <tr>
            <td>State:</td>
            <td><h4><%= @customer.state %></h4></td>
          </tr>
          <tr>
            <td>Zip:</td>
            <td><h4><%= @customer.zip %></h4></td>
          </tr>
          <tr>
            <td>Phone:</td>
            <td><h4><%= @customer.phone %></h4></td>
          </tr>
          </tbody>
        </table>

      </div>
    </div>

    <div class="form-actions">
      <%= link_to 'Back', organization_customers_path, :class => 'btn' %>
      <%= link_to 'Edit', edit_organization_customer_path(@customer.organization, @customer), :class => 'btn btn-primary' %>
      <%= link_to 'Delete', organization_customer_path(@customer.organization, @customer), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
    </div>

  </div>
</div>

