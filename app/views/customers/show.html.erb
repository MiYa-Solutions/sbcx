<% provide(:title, @customer.name) %>

<div class="well">

  <div class="row-fluid">
    <div class="span4">
      <div class="smart_label">
        <ul>
          <li><h1><%= @customer.name %></h1></li>
          <li class="red-balance"><h1><%= Account.human_attribute_name(:balance) %>
            <span id="customer_balance"><%= humanized_money_with_symbol @customer.account.balance %></span></h1></li>
        </ul>

      </div>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span4">
      <table class="table table-striped table-condensed">
        <tbody>
        <tr>
          <td>Company:</td>
          <td><h4><%= @customer.company %></h4></td>
        </tr>
        <tr>
          <td>Address:</td>
          <td><h4><%= @customer.address1 %> <%= @customer.address2 %></h4></td>
        </tr>
        <tr>
          <td>City:</td>
          <td><h4><%= @customer.city %></h4></td>
        </tr>
        <tr>
          <td>State:</td>
          <td><h4><%= @customer.state %></h4></td>
        </tr>
        <tr>
          <td>Country:</td>
          <td><h4><%= @customer.country %></h4></td>
        </tr>
        <tr>
          <td>Zip:</td>
          <td><h4><%= @customer.zip %></h4></td>
        </tr>
        <tr>
          <td>Phone:</td>
          <td><h4><%= @customer.phone %></h4></td>
        </tr>
        <tr>
          <td>Mobile Phone:</td>
          <td><h4><%= @customer.mobile_phone %></h4></td>
        </tr>
        <tr>
          <td>Email:</td>
          <td><h4><%= @customer.email %></h4></td>
        </tr>

        </tbody>
      </table>

    </div>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', customers_path, :class => 'btn btn-medium' %>
    <%= link_to 'Edit', edit_customer_path(@customer), :class => 'btn btn-medium btn-primary' %>
    <%= link_to 'Archive', customer_path(@customer), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>
  </div>

</div>

<div>
  <%= render 'accounting_entries/accounting_entries_table', account: @customer.account %>
</div>


