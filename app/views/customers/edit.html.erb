<% provide(:title, "Edit Customer") %>

<div class="well">
  <div class="row">
    <div class="span3">
      <h3>Edit Customer Contact:</h3>
    </div>
  </div>

  <div class="row">
    <div class="span10 offset1">

      <%= simple_form_for @customer, :html => {:class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>
          <div class="offset2"   >
            <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
