<% provide(:title, "Edit Customer") %>

<div class="well">

  <div class="row-fluid">
      <div class="smart_label"  >
        <h1>Edit <%= @customer.name %> Info:</h1>

      </div>
  </div>
  <br>


  <div class="row-fluid">
    <div class="span5 ">
      <!--<div class="form-actions">-->

      <%= simple_form_for @customer, :html => {:class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>
            <div class="form-actions">
              <%= link_to 'Back', customers_path, :class => 'btn btn-medium' %>
              <%= f.submit "Save Changes", class: "btn btn-medium btn-primary" %>
          </div>
      <% end %>

    <!--</div>-->
  </div>
</div>


</div>