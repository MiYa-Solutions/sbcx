<% provide(:title, I18n.t('general.general.my_customers')) %>
<br>



<div class="search_network">
  <%= form_tag customers_path, id: "customer_search_form", :method => :get, :remote => true, :class => "ui-listview-filter ui-bar-c", "role" => "search" do %>
      <div class="ui-input-search ui-shadow-inset ui-btn-corner-all ui-btn-shadow ui-icon-searchfield ui-body-c">
        <%= text_field_tag :search, params[:search], "data-divider-theme" => "d", :placeholder => "Search Contacts", "class" => "ui-input-text ui-body-c" %>
      </div>
      <div class= "new_job_button">
        <%= link_to I18n.t('general.general.new'), new_customer_path, "data-role" => "button", id: 'new-customer-button', "class" => "ui-btn ui-shadow ui-btn-corner-all ui-mini ui-btn-inline ui-btn-up-b" %>
      </div>
  <% end %>
</div>

<ul data-role="listview">
  <% @customers.each do |customer| %>
      <li class="inline_mobile"><%= link_to customer.name, customer, "data-transition" => "slide" %>

      </li>
  <% end %>
</ul>



