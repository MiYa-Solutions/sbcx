<div class="affiliate_info">
  <div class="smart_label">
    <ul>
      <li><h1><%= I18n.t('general.general.contact_Info') %></h1></li>
      <li>
        <% if @affiliate.member? %>
            <% unless current_user.organization.my_affiliate?(@affiliate) %>
                <%= image_tag("question24.png", :title => I18n.t('general.messages.add_member_invite'), :rel => 'tooltip') %>
                <%= link_to(t('general.general.add_member'), "#invite_modal_index_#{@affiliate.id}", class: "btn btn-medium btn-primary", data: { toggle: 'modal' }, role: "button", id: "affiliate_invite_btn", :title => I18n.t('general.messages.invite_member').html_safe, :rel => 'tooltip') %>
                <%= render 'affiliate_invite', affiliate: @affiliate %>
            <% end %>
        <% else %>
            <%= image_tag("question24.png", :title => I18n.t('general.messages.send_invite'), :rel => 'tooltip') %>
            <%= link_to(I18n.t('general.general.send_invite'), "#referral_modal_index_#{@affiliate.id}", class: "btn btn-medium btn-success", data: { toggle: 'modal' }, role: "button", id: "affiliate_referral_btn") %>
            <%= render 'affiliate_referral', affiliate: @affiliate %>

        <% end %>
      </li>
    </ul>
  </div>

  <table class="table table-striped table-condensed">
    <tbody>
    <tr>
      <td class="first_td"><strong><%= Affiliate.human_attribute_name(:company) %></strong></td>
      <td class="second_td"><%= @affiliate.company %></td>
      <td class="third_td"><strong><%= Affiliate.human_attribute_name(:phone) %></strong></td>
      <td class="forth_td"><%= @affiliate.phone %></td>
    </tr>
    <tr>
      <td><strong><%= I18n.t('general.general.address') %></strong></td>
      <td><%= @affiliate.address1 %> <%= @affiliate.address2 %></td>
      <td><strong><%= Affiliate.human_attribute_name(:mobile) %></strong></td>
      <td><%= @affiliate.mobile %></td>
    </tr>
    <tr>
      <td><strong><%= Affiliate.human_attribute_name(:city) %></strong></td>
      <td><%= @affiliate.city %></td>
      <td><strong><%= Affiliate.human_attribute_name(:email) %></strong></td>
      <td><%= link_to @affiliate.email, "mailto:" + @affiliate.email %></td>
    </tr>
    <tr>
      <td><strong><%= Affiliate.human_attribute_name(:state) %></strong></td>
      <td><%= @affiliate.state %></td>
      <td><strong><%= Affiliate.human_attribute_name(:website) %></strong></td>
      <td><%= link_to @affiliate.website, @affiliate.website %></td>
    </tr>
    <tr>
      <td><strong><%= Affiliate.human_attribute_name(:country) %></strong></td>
      <td><%= @affiliate.country %></td>
      <td><strong><%= Affiliate.human_attribute_name(:status) %></strong></td>
      <td><%= @affiliate.human_status_name %></td>
    </tr>
    <tr>
      <td><strong><%= Affiliate.human_attribute_name(:zip) %></strong></td>
      <td><%= @affiliate.zip %></td>
      <td><strong><%= I18n.t('general.general.roles') %></strong></td>
      <td class="roles_table">
        <% for role in @affiliate.organization_roles %>
            <ul>
              <li>
                <span class="label label-info"><%= role.name %></span>
              </li>
            </ul>
        <% end %>
      </td>
    </tr>
    </tbody>
  </table>

  <div class="form-actions">
    <% if @affiliate.subcontrax_member==true %>
        <%= link_to 'Back', affiliates_path, :class => 'btn btn-medium' %>
        <!--<#% if  @affiliate.id.in? affiliate_ids %>-->
        <!--<#%= link_to 'Archive', affiliate_path(@affiliate), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>-->
        <!--<#% end %>-->

    <% else %>
        <%= link_to 'Back', affiliates_path, :class => 'btn btn-medium' %>
        <%= link_to 'Edit', edit_affiliate_path(@affiliate), :class => 'btn btn-medium btn-primary' %>
        <!--<#%= link_to 'Archive', '#', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>-->

    <% end %>
  </div>
</div>

