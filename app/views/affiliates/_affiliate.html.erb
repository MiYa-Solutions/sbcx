<tr xmlns="http://www.w3.org/1999/html">
  <td class="member_logo">
    <% if affiliate.subcontrax_member? %>
        <!--<span class="member_label">-->
        <!--<badge><i class="icon-user icon-white"></i></badge>-->
        <!--</span>-->
        <%= image_tag("member.png", :title => I18n.t('general.messages.member_icon'), :rel => 'tooltip') %>

    <% end %>

  </td>
  <td><%= link_to affiliate.name, affiliate_path(affiliate) %></td>

  <td><%= affiliate.phone %></td>
  <td><%= link_to affiliate.email, "mailto:#{affiliate.email}" %></td>

  <td></td>
  <!--<#% if @account.balance > 0 %>-->
  <!--<td class="green_balance"><#%= humanized_money_with_symbol @account.balance %></td>-->
  <!--<#% else %>-->
  <!--<td class="green-balance"><#%= humanized_money_with_symbol @account.balance %></td>-->
  <!--<#% end %>-->

  <td class="actions_affiliate_index">
    <% if affiliate.subcontrax_member? %>
        <% unless  affiliate.id.in? affiliate_ids %>
            <div class="miya_buttons_grid">
              <ul>
                <li class="add_member">
                  <!--<#%= link_to I18n.t('general.general.add_member'), affiliate_path(affiliate), :class => 'btn btn-mini btn-primary', :title => I18n.t('general.messages.invite_member').html_safe, :rel => 'tooltip' %>-->
                  <%= link_to(t('general.general.add_member'), "#invite_modal_index_#{affiliate.id}", class: "btn btn-mini btn-success", data: { toggle: 'modal' }, role: "button", id: "affiliate_invite_btn", :title => I18n.t('general.messages.invite_member').html_safe, :rel => 'tooltip') %>

                </li>

              </ul>

            </div>
        <% end %>

    <% else %>
        <div class="miya_buttons_grid">
          <ul>
            <!--<li>-->
            <!--<#%= link_to 'Archive', affiliate_path(affiliate), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>-->
            <!--</li>-->
            <li>
              <%= link_to I18n.t('general.general.edit'), edit_affiliate_path(affiliate), :class => 'btn btn-mini' %>
            </li>
            <li>
              <%= link_to I18n.t('general.general.send_invite'), "#", :class => 'btn btn-mini btn-primary', :title => I18n.t('general.messages.send_invite').html_safe, :rel => 'tooltip' %>
            </li>

          </ul>
        </div>
    <% end %>

  </td>

  <td>
    <% if affiliate.provider? %>
        <%= image_tag("prov24.png", :title => I18n.t('general.messages.provider_icon').html_safe, :rel => 'tooltip') %>

    <% end %>
    <% if affiliate.subcontractor? %>
        <%= image_tag("sub24.png", :title => I18n.t('general.messages.subco_icon').html_safe, :rel => 'tooltip') %>

    <% end %>


  </td>


</tr>


<div id='<%= "invite_modal_index_#{affiliate.id}" %>' class='modal hide fade' tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <%= simple_form_for(Invite.new, :html => { :class => 'form-horizontal' }) do |f| %>
      <div class="modal-header">

        <div class="smart_label">
          <ul>
            <li><h1><%= t('general.general.new_invite_for') %> <%= affiliate.name %></h1></li>
            <li>
              <button class="btn" data-dismiss="modal" aria-hidden="true"><%= t('general.general.close') %></button>
            </li>
          </ul>
        </div>

      </div>

      <div class="modal-body">
        <%= f.error_notification %>

        <div class="row-fluid">

          <div class="form-inputs">
            <%= f.input :message, as: :text, :input_html => { :value => I18n.t('general.message.invite_member') + current_user.name } %>
            <%= f.hidden_field :affiliate_id, value: affiliate.id %>
          </div>

          <br>
          <%= f.button :submit, id: 'invite_create_btn', :value => t('general.general.add_member'), class: 'btn btn-large btn-primary' %>

        </div>

      </div>


      <!--End of Form-->
  <% end %>
</div>

