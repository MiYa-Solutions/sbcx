<% provide(:title, "Edit Provider") %>

<div class="well">

  <div class="row-fluid">
      <div class="smart_label">
        <h1>Edit <%= @affiliate.name %> Info:</h1>
      </div>
  </div>

  <br>

  <div class="row-fluid">
    <div class="span5 ">
      <%= simple_form_for @affiliate, url: affiliate_url(@affiliate), :html => { :class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>

          <div class="form-actions">
            <%= link_to 'Back', affiliate_path, :class => 'btn btn-medium' %>
            <%= f.submit t('affiliates.buttons.save'), class: "btn btn-medium btn-primary", id: 'save_affiliate_btn' %>
          </div>
      <% end %>

    </div>
  </div>

</div>


