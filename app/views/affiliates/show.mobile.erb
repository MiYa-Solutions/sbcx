<% provide(:title, @affiliate.name) %>

<div class="service_call_show_buttons">
<% if @affiliate.subcontrax_member? %>
   <% if  @affiliate.id.in? current_user.organization.provider_ids %>

         <fieldset class="ui-grid-b ui-btn-inner-small">
              <div class="ui-block-a">
                <%= link_to 'Back', affiliates_path, "data-role" => "button", "data-theme" => "d", "data-mini" => "true", "data-icon" => "arrow-l" %>
              </div>
              <div class="ui-block-b">
              </div>
              <div class="ui-block-c">
              </div>
         </fieldset>
    <% else %>
        <fieldset class="ui-grid-a ui-btn-inner-small">
          <div class="ui-block-a">
            <%= link_to 'Back', affiliates_path, "data-role" => "button", "data-theme" => "d", "data-mini" => "true", "data-icon" => "arrow-l" %>
          </div>
          <div class="ui-block-b">
            <div class="miya_blue_button">
            <%= form_for(current_user.organization.agreements.build(provider_id: @affiliate.id)) do |f| %>
                <div><%= f.hidden_field :provider_id %></div>
                <%= f.submit "Add Member", "data-theme" => "b", "data-mini" => "true" %>
            <% end %>
          </div>
          </div>
        </fieldset>

    <% end %>

<% else %>
    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to 'Back', affiliates_path, "data-role" => "button", "data-theme" => "d", "data-mini" => "true", "data-icon" => "arrow-l" %>
      </div>
      <div class="ui-block-b">
        <div class="miya_blue_button">
         <%= link_to 'Invite', new_affiliate_path, "data-role" => "button", "data-theme" => "b", "data-mini" => "true", "data-icon" => "email" %>
       </div>
      </div>
    </fieldset>

<% end %>

</div>

<!--agreements Info-->
<div data-role="collapsible-set" data-inset="false" >

  <div data-role="collapsible" data-collapsed="true" data-theme="d" class="affiliate_agreements">
    <%= render :partial => 'affiliate_agreements' %>
  </div>

<!--Billing Info-->
  <div data-role="collapsible" data-collapsed="true" data-theme="d" class="affiliate_balance">

    <h3><%= I18n.t('general.general.balance')%>
      <span class="blue_badge_collape">
                    <badge><%= Bom.human_attribute_name(:total) %> <%= '&nbsp;'.html_safe %>
                      <span id='job_total_price'>
                      $199
                      <!--<#%= humanized_money_with_symbol @service_call.total_price %>-->
                      </span>
                    </badge>
        </span>
    </h3>

    <% if @account.present? %>
        <ul data-role="listview">
             <% @account.accounting_entries.each do |entry| %>
                <li class=" job_billing">
                  <%= link_to entry.ticket.address1, entry.ticket.becomes(entry.ticket.class.superclass), "data-transition" => "slide" %>
                  <p class= "billing_price_label"><%= I18n.t('general.general.balance') %> </p>
                  <p class="billing_price"><%= humanized_money_with_symbol entry.balance %></p>

                </li>
             <% end %>
          <br>
        </ul>
    <% else %>
        No Account Present
    <% end %>



  </div>













  <!--end of re-designed-->

  <div data-role="collapsible" data-collapsed="true" data-theme="d">
