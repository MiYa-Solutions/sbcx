<% provide(:title, @affiliate.name) %>

<div class="service_call_show_buttons">
<% if @affiliate.subcontrax_member? %>
   <% if  @affiliate.id.in? current_user.organization.provider_ids %>

         <fieldset class="ui-grid-b ui-btn-inner-small">
              <div class="ui-block-a">
                <%= link_to 'Back', affiliates_path, "data-role" => "button", "data-theme" => "d", "data-mini" => "true", "data-icon" => "arrow-l" %>
              </div>
              <div class="ui-block-b">
              </div>
              <div class="ui-block-c">
              </div>
         </fieldset>
    <% else %>
        <fieldset class="ui-grid-a ui-btn-inner-small">
          <div class="ui-block-a">
            <%= link_to 'Back', affiliates_path, "data-role" => "button", "data-theme" => "d", "data-mini" => "true", "data-icon" => "arrow-l" %>
          </div>
          <div class="ui-block-b">
            <div class="miya_blue_button">
            <%= form_for(current_user.organization.agreements.build(provider_id: @affiliate.id)) do |f| %>
                <div><%= f.hidden_field :provider_id %></div>
                <%= f.submit "Add Member", "data-theme" => "b", "data-mini" => "true" %>
            <% end %>
          </div>
          </div>
        </fieldset>

    <% end %>

<% else %>
    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to 'Back', affiliates_path, "data-role" => "button", "data-theme" => "d", "data-mini" => "true", "data-icon" => "arrow-l" %>
      </div>
      <div class="ui-block-b">
        <div class="miya_blue_button">
         <%= link_to 'Invite', new_affiliate_path, "data-role" => "button", "data-theme" => "b", "data-mini" => "true", "data-icon" => "email" %>
       </div>
      </div>
    </fieldset>

<% end %>

</div>

<div data-role="collapsible-set" data-inset="false" >

  <div data-role="collapsible" data-collapsed="true" data-theme="d" class="affiliate_agreements">
    <h3><%= Agreement.model_name.human.pluralize %></h3>

    <% if @agreements.empty? %>
        <p>  <%= I18n.t('general.messages.invite_member') %></p>

        <div class="miya_blue_button">
          <%= link_to t('affiliates.buttons.new_agreement'), "#betaPopup", "data-rel" => "popup", "data-transition" => "pop", "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_affiliate_btn', "data-icon" => "check", "data-iconpos" => "left" %>
        </div>

    <% else %>
        <ul data-role="listview">
          <% @agreements.each do |agreement| %>
                       <li class="inline_mobile service_calls_index">
                         <%= link_to agreement.name, agreement_path, "data-transition" => "slide" %>

                       <% if agreement.human_status_name == 'draft' %>
                         <p class="service_call_status_red">
                           <%= agreement.status_name %>
                         </p>
                       <% else %>
                        <p class="service_call_status">
                           <%= agreement.status_name %>
                        </p>
                       <% end %>
                       </li>
          <% end %>
          <br>
        </ul>

       <div class="miya_blue_button">
          <%= link_to t('affiliates.buttons.new_agreement'), "#betaPopup", "data-rel" => "popup", "data-transition" => "pop", "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_affiliate_btn', "data-icon" => "check", "data-iconpos" => "left" %>
       </div>

    <% end %>
  </div>




