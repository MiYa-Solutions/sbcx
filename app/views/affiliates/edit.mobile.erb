<% provide(:title, "Edit " + @affiliate.name + "'s info") %>

      <%= simple_form_for @affiliate, url: affiliate_url(@affiliate), :html => { :class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>

          <%= f.submit t('affiliates.buttons.save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_affiliate_btn', "data-icon" => "check", "data-iconpos" => "left" %>
          <%= link_to 'Back', affiliate_path, "class" => "ui-btn-up-c", "data-role" => "button", "data-icon" => "arrow-l", "data-iconpos" => "left" %>

      <% end %>


