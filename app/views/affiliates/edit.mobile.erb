<% provide(:title, I18n.t('general.general.edit').html_safe + "&nbsp;".html_safe + @affiliate.name) %>

<%= simple_form_for @affiliate, url: affiliate_url(@affiliate), :html => { :class => 'form-horizontal' } do |f| %>


    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to t('general.general.back'), affiliate_path, "class" => "ui-btn-up-c", "data-role" => "button", "data-icon" => "arrow-l", "data-iconpos" => "left" %>
      </div>
      <div class="ui-block-b">
          <%= f.submit t('affiliates.buttons.save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_affiliate_btn', "data-icon" => "check", "data-iconpos" => "left" %>
      </div>
    </fieldset>


    <%= render 'fields', f: f %>


    <%= f.submit t('affiliates.buttons.save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_affiliate_btn_lower', "data-icon" => "check", "data-iconpos" => "left" %>


<% end %>
