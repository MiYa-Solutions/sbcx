<div class="well well_job_history" id="job_statuses_actions">

  <%= render :partial => 'job_statuses' %>
  <br>

  <ul class="unstyled">
    <li>
      <div class="smart_label">
        <ul>
          <li>
            <h1><%= I18n.t('general.general.actions') %>
              <% if @service_call.class == MyServiceCall && @service_call.work_pending? && !@service_call.transferred? %>

                  <% if @service_call.organization.multi_user? %>
                      <%= image_tag("question24.png", :title => I18n.t('general.messages.actions_local_job_dispatch'), :rel => 'tooltip', "data-placement" => "right") %>
                  <% else %>
                      <%= image_tag("question24.png", :title => I18n.t('general.messages.actions_local_job'), :rel => 'tooltip', "data-placement" => "right") %>
                  <% end %>

              <% end %>

              <% if @service_call.class == MyServiceCall && @service_call.work_dispatched? && !@service_call.transferred? %>
                  <%= image_tag("question24.png", :title => I18n.t('general.messages.actions_local_job_dispatched'), :rel => 'tooltip', "data-placement" => "right") %>
              <% end %>
            </h1>
          </li>
          <li></li>
        </ul>
      </div>
    </li>
    <li>
      <div class="row-fluid action_buttons_service_call">
        <div class="service_call_events">
        <!--<div class="service_call_events">-->
               <%= status_forms(@service_call) %>
               <%= work_status_forms(@service_call) %>
      <!--</div>-->
        <!--<#%= event_list(@service_call) %>-->
          </div>
      </div>
    </li>

    <% if @service_call.work_done? %>
          <% unless @service_call.subcontractor_status_events.empty? %>
            <li>
              <div class="smart_label">
                <ul>
                  <li>
                    <h1><%= I18n.t('general.general.subcon_actions') %>
                      <%= image_tag("question24.png", :title => I18n.t('general.messages.actions_subcontractor'), :rel => 'tooltip', "data-placement" => "right") %>
                    </h1>
                  </li>
                  <li></li>
                </ul>
              </div>
            </li>
            <li>
              <div class="action_buttons_service_call affiliate_actions">

                  <div class="row-fluid">
                    <div class="service_call_events">
                  <%= subcontractor_status_forms(@service_call) %>

                  </div>
               </div>
              </div>
            </li>
        <% end %>
    <% end %>

    <% if @service_call.work_done? %>
       <% if @service_call.kind_of?(TransferredServiceCall) && @service_call.provider_settlement_allowed? %>
        <li>
          <div class="smart_label">
            <ul>
              <li>
                <h1><%= I18n.t('general.general.provider_actions') %>
                  <%= image_tag("question24.png", :title => I18n.t('general.messages.actions_provider'), :rel => 'tooltip', "data-placement" => "right") %>
                </h1>
              </li>
              <li></li>
            </ul>
          </div>
        </li>
        <li>
          <div class="action_buttons_service_call affiliate_actions">
              <div class="row-fluid">
                <div class="service_call_events">
                 <%= provider_status_forms(@service_call) %>
              </div>
            </div>
          </div>
        </li>
    <% end %>
    <% end %>

  </ul>

</div>