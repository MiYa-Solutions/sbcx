<div class="well">

  <div class="smart_label">
    <ul>
      <li><h1>Service Calls</h1></li>
      <li>
        <!--search placement-->
      </li>
      <li>
        <%= link_to 'New Service Call', new_service_call_path, :class => 'btn btn-primary' %>
      </li>
    </ul>
  </div>

  <br>


  <% if @service_calls.nil? %>
      <span class="alert alert-info">No records, click "New Service Call" to add new contact</span>
  <% else %>


      <table class="table table-striped">
        <thead>
        <tr>
          <!--<th>ID</th>-->
          <th>Ref</th>
          <th>Status</th>
          <!--<th>Subcontractor Status</th>-->
          <th>Provider</th>
          <th>Subcontractor</th>
          <th>Customer</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @service_calls.each do |sc| %>
            <tr>

              <!--<td><#%= link_to sc.id, service_call_path(sc) %></td>-->
              <td><%= link_to sc.ref_id, service_call_path(sc) %></td>
              <td><%= link_to sc.human_status_name, service_call_path(sc) %></td>
              <!--<td><#%= sc.human_subcontractor_status_name %></td>-->
              <td><%= sc.provider.try(:name) %></td>
              <td><%= sc.subcontractor.try(:name) %></td>
              <td><%= sc.customer.try(:name) %></td>
              <td>
                <!--<#%= link_to 'Edit', edit_service_call_path(sc), :class => 'btn btn-mini' %>-->
                <%= link_to 'Show', sc.becomes(ServiceCall), :class => 'btn btn-mini btn-info' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>


  <% end %>

</div>