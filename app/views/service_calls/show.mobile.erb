<% provide(:title, I18n.t('general.general.job_number').html_safe + "&nbsp;".html_safe + "#{@service_call.ref_id}" )%>

<!--Job Actions  -->
<div data-role="collapsible-set" data-inset="false">

  <div data-role="collapsible" data-collapsed="true" data-theme="d">
     <h3><%= I18n.t('general.general.actions')%></h3>
     <div class="service-call-actions" data-theme="d">
           <%= event_list(@service_call) %>
     </div>
  </div>

<!--Job Customer Details-->
  <div data-role="collapsible" data-collapsed="true" data-theme="d">
    <%= render :partial => 'job_customer_info' %>
  </div>

<!--Job Status-->
  <div data-role="collapsible" data-theme="d">
    <%= render :partial => 'job_statuses' %>
  </div>

  <!--Job Info-->
  <div data-role="collapsible" data-theme="d">
    <%= render :partial => 'job_info_mobile' %>
  </div>

<!--Parts-->
  <div data-role="collapsible" data-collapsed="true" data-theme="d">

        <h3><%= I18n.t('general.general.parts')%></h3>

        <div class="miya_blue_button_bom">
          <%= link_to I18n.t('general.general.add_part'), new_service_call_bom_path(@service_call), "data-role" => "button", "data-theme" => "b", "data-mini" => "true", "data-icon" => "arrow-r", "data-iconpos" => "right", "data-transition" => "slide" %>
        </div>

        <ul data-role="listview">
         <% @service_call.boms.each do |bom| %>
             <li>
             <%= link_to bom.material_name, edit_service_call_bom_path(@service_call, bom), "data-transition" => "slide" %>
             </li>
          <% end %>
            <br>
        </ul>

  </div>

  <!--Appointment-->
  <div data-role="collapsible" data-collapsed="true" data-theme="d">
    <h3><%= I18n.t('general.general.appointments') %></h3>
    <p class="service-call-actions">
      Appointment
    </p>
  </div>


<% unless @service_call.events.empty? %>
<!--Job History-->
   <div data-role="collapsible" data-collapsed="true" data-theme="d">
    <h3>Job History</h3>

     <ul data-role="listview">
         <% @service_call.events.each do |event| %>
             <li class="ui-li ui-li-static">
                 <div class="ui-grid-a">
                   <div class="ui-block-a"> <%= event.name %></div>
                   <div class="ui-block-b">
                     <%= event.description %>
                     <br>at:
                     <%= event.created_at %>
                   </div>
                 </div>
             </li>
         <% end %>
     </ul>

  </div>
<% end %>


  <!--end of collapsible-->
</div>


<!--Notes-->
<%= simple_form_for @service_call, as: :service_call, url: service_call_url(@service_call), :html => { :class => 'form-horizontal' }, :remote => true do |f| %>

    <div class="customer_contacts">

      <div class="ui-grid-a">
        <div class="ui-block-a">Notes:</div>
        <div class="ui-block-b"> <%= f.text_field :notes %> </div>
      </div>
      </div>

    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to "Back", service_calls_path, "data-role" => "button", "data-iconpos" => "left", :class => "ui-btn-up-d", "data-icon" => "arrow-l", id: 'back_service_call_btn' %>
      </div>
      <div class="ui-block-b">
        <%= f.submit "Save", "data-theme" => "b", :class => "ui-btn-up-b", "data-icon" => "check", "data-iconpos" => "right", id: 'service_call_save_btn' %>
      </div>
    </fieldset>



<% end %>





