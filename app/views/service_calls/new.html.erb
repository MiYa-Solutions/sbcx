<%= provide(:title, 'New Service Call') %>

<div class="well">

  <div class="row-fluid">
    <div class="span12">
      <div class="smart_label"  >
        <h1>New Service Call</h1>

      </div>
    </div>
  </div>
  <br>

  <div class="row-fluid">


      <%= simple_form_for @service_call, url: service_calls_url, :html => {:class => 'form-horizontal' } do |f| %>
          <%= render 'form', f: f %>

          <div class="form-actions">
              <%= link_to "Back to List", service_calls_path, :class => 'btn btn-medium' %>
              <%= f.submit "Create Service Call", class: "btn btn-medium btn-primary" %>
          </div>
      <% end %>

  </div>





  <div class="row-fluid">
    <div class="span10 ">
      <button class="btn btn-danger" data-toggle="collapse" data-target="#demo">
        Add customer
      </button>

      <div id="new_customer_in_service_call" class="collapse">
        <div class="row-fluid">
          <div class="span10 ">
            <br>
            <p>
              text here


             <%= simple_form_for @customer, :html => {:class => 'form-horizontal'}, :remote => true do |f| %>
              <%= render 'customers/fields', f: f %>
            <div class="form-actions">
              <%= f.submit "Create Customer", class: "btn btn-medium btn-primary" %>
            </div>

            <% end %>
              <button class="btn btn-danger" data-toggle="collapse" data-target="#demo">
                Save and close
              </button>
            </p>
          </div>
        </div>
      </div>

    </div>
  </div>


</div>

