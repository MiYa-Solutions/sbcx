<% provide(:title, I18n.t('general.general.new').html_safe + "&nbsp;".html_safe + @service_call.class.human_attribute_name(:service_call) ) %>


<div class="well well_height"  >

  <div class="row-fluid">

    <div class="smart_label">
      <h1><%= I18n.t('general.general.new_job') %></h1>
    </div>

  </div>
  <br>

  <div class="row-fluid">

    <%= simple_form_for @service_call, as: :service_call, url: service_calls_url, :html => { :class => 'form-horizontal' } do |f| %>
        <div class="row-fluid">
          <% if f.object.errors.any? %>
              <div class="alert alert-block alert-error">
                <a class="close" data-dismiss="alert" href="#">Ã—</a>
                <%= render 'shared/error_messages', object: f.object %>
              </div>
          <% end %>
        </div>

        <%= render 'fields', f: f %>

        <div class="form-actions">
          <%= link_to "Back to List", service_calls_path, :class => 'btn btn-large' %>
          <%= f.submit "Create Service Call", class: "btn btn-large btn-primary", id: 'service_call_create_btn' %>
        </div>
    <% end %>

  </div>


  <!--note-->


</div>

