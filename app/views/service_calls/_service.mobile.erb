<!--update customer contact info-->

<div class="customer_contacts">
  <div class="ui-grid-a">
    <div class="ui-block-a">Name:</div>
    <div class="ui-block-b"><%= f.text_field :new_customer, "class" => "ui-disabled", placeholder: @service_call.customer.name %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Address1:</div>
    <div class="ui-block-b"><%= f.text_field :address1 %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Address2:</div>
    <div class="ui-block-b"><%= f.text_field :address2 %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Company:</div>
    <div class="ui-block-b"><%= f.text_field :company %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">City:</div>
    <div class="ui-block-b"><%= f.text_field :city %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">State:</div>
    <div class="ui-block-b"><%= f.text_field :state %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Zip:</div>
    <div class="ui-block-b"><%= f.text_field :zip %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Country:</div>
    <div class="ui-block-b"><%= f.text_field :country %></div>
  </div>

<div class="ui-grid-a">
  <div class="ui-block-a">Phone:</div>
  <div class="ui-block-b"><%= f.text_field :phone %></div>
</div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Mobile:</div>
    <div class="ui-block-b"><%= f.text_field :mobile_phone %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Work:</div>
    <div class="ui-block-b"><%= f.text_field :work_phone %></div>
  </div>
  <div class="ui-grid-a">
    <div class="ui-block-a">Email:</div>
    <div class="ui-block-b"><%= f.text_field :email %></div>
  </div>


</div>