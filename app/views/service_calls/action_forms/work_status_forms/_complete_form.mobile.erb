<%= simple_form_for job.becomes(ServiceCall) do |f| %>
    <%= hidden_field_tag 'service_call[work_status_event]', 'complete' %>
    <%= f.submit job.class.human_work_status_event_name(:complete).titleize,
                 id:    'complete_service_call_btn',
                 class: "ui-btn-up-b ui-btn-hidden",
                 "data-theme" => "b",
                 title: I18n.t('service_call.forms.work_status.complete.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

