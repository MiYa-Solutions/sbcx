<%= simple_form_for job.becomes(ServiceCall), html: { class: 'red-button' } do |f| %>
    <%= hidden_field_tag 'service_call[work_status_event]', 'reject' %>
    <%= f.submit job.class.human_work_status_event_name(:reject).titleize,
                 id:    'reject_service_call_btn',
                 class: "ui-btn-up-r",
                 "data-theme" => "r",
                 title: I18n.t('service_call.forms.work_status.reject.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

