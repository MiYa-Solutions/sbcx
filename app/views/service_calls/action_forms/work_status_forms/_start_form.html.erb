<%= simple_form_for job.becomes(ServiceCall), html: { class: style('service_call.forms.work_status.cancel.form_classes') } do |f| %>
    <%= hidden_field_tag 'service_call[work_status_event]', 'start' %>
    <%= f.submit job.class.human_work_status_event_name(:start).titleize,
                 id:    'start_service_call_btn',
                 class: style('service_call.forms.work_status.start.button_classes'),
                 title: I18n.t('service_call.forms.work_status.start.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

