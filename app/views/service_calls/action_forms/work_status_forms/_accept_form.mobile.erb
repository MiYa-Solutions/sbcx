<%= simple_form_for job.becomes(ServiceCall), html: { class: 'green-button' } do |f| %>
    <%= hidden_field_tag 'service_call[work_status_event]', 'accept' %>
    <%= f.submit job.class.human_work_status_event_name(:accept).titleize,
                 id:    'accept_service_call_btn',
                 class: "ui-btn-up-b ui-btn-hidden",
                 "data-theme" => "b",
                 title: I18n.t('service_call.forms.work_status.accept.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

