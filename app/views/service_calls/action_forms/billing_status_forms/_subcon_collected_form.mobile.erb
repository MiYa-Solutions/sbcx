<%= simple_form_for job.becomes(ServiceCall), html: { class: 'blue-blue' } do |f| %>
    <%= hidden_field_tag 'service_call[billing_status_event]', 'subcon_collected' %>
    <%= hidden_field_tag 'service_call[collector_id]', job.subcontractor.id %>
    <%= hidden_field_tag 'service_call[collector_type]', 'Organization' %>
    <%= f.input :payment_type, collection: payment_types, input_html: { id: 'service_call_subcon_payment' } %>
    <%= f.submit job.class.human_billing_status_event_name(:subcon_collected).titleize,
                 id:    'subcon_collected_service_call_btn',
                 class: 'btn btn-large btn-primary',
                 title: I18n.t('service_call.forms.billing_status.subcon_collected.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

