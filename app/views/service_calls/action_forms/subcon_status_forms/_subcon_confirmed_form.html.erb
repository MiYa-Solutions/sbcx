<div class="span6">
<%= simple_form_for job.becomes(ServiceCall), html: { class: 'green-button' } do |f| %>
    <%= hidden_field_tag 'service_call[subcontractor_status_event]', 'subcon_confirmed' %>
    <%= f.submit job.class.human_subcontractor_status_event_name(:subcon_confirmed).titleize,
                 id:    'subcon_confirmed_service_call_btn',
                 class: 'btn btn-large btn-success',
                 "data-placement" => "right",
                 title: I18n.t('service_call.forms.subcontractor_status.subcon_confirmed.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

</div>