<%= simple_form_for job.becomes(ServiceCall), html: { id: 'subcon_status_settle' } do |f| %>
    <%= hidden_field_tag 'service_call[subcontractor_status_event]', 'settle' %>
    <%= f.input :subcon_payment, collection: payment_types %>
    <%= f.submit job.class.human_subcontractor_status_event_name(:settle).titleize,
                 id:    'settle_service_call_btn',
                 class: "ui-btn-up-b ui-btn-hidden",
                 "data-theme" => "b",
                 title: I18n.t('service_call.forms.subcontractor_status.settle.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

