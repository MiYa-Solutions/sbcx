<%= simple_form_for job.becomes(ServiceCall), html: { class: 'green-button' } do |f| %>
    <%= hidden_field_tag 'service_call[subcontractor_status_event]', 'confirm_settled' %>
    <%= f.input :subcon_payment, collection: payment_types %>
    <%= f.submit job.class.human_subcontractor_status_event_name(:confirm_settled).titleize,
                 id:    'confirm_settled_subcon_service_call_btn',
                 class: "ui-btn-up-b ui-btn-hidden",
                 "data-theme" => "b",
                 title: I18n.t('service_call.forms.subcontractor_status.confirm_settled.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

