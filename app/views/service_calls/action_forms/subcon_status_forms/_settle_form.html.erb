
  <%= simple_form_for job, as: :service_call,  html: { id: 'subcon_status_settle', class: 'blue-button' } do |f| %>
      <%= hidden_field_tag 'service_call[subcontractor_status_event]', 'settle' %>
      <%= f.input :subcon_settle_type, collection: payment_types %>
      <%= f.input :subcon_settle_amount, input_html: {value: (job.subcon_balance.abs), type: 'number' }%>
      <%= f.submit t('general.general.submit'),
                   id:    'settle_service_call_btn',
                   class: 'btn btn-primary',
                   title: I18n.t('service_call.forms.subcontractor_status.settle_amount.tooltip'),
                   "data-placement" => "right",
                   rel:   'tooltip'
      %>
  <% end %>

