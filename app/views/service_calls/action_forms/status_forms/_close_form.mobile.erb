<%= simple_form_for job.becomes(ServiceCall), html: { class: style('service_call.forms.work_status.close.form_classes') } do |f| %>
    <%= hidden_field_tag 'service_call[status_event]', 'close' %>
    <%= f.submit job.class.human_status_event_name(:close).titleize,
                 id:    'close_service_call_btn',
                 class: style('service_call.forms.status.close.button_classes'),
                 title: I18n.t('service_call.forms.status.close.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

