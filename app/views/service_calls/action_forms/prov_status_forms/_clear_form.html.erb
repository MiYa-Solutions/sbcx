<div class="span6">
<%= simple_form_for job.becomes(ServiceCall), html: { class: 'button-green' } do |f| %>
    <%= f.input :provider_payment, collection: payment_types %>
    <%= hidden_field_tag 'service_call[provider_status_event]', 'clear' %>
    <%= f.submit job.class.human_provider_status_event_name(:clear).titleize,
                 id:    'provider_settle_service_call_btn',
                 class: 'btn btn-large btn-success',
                 title: I18n.t('service_call.forms.provider_status.clear.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

</div>