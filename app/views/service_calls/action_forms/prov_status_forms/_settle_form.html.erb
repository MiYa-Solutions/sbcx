<div class="span6">
  <%= link_to(job.class.human_provider_status_event_name(:settle).titleize, '#settle_prov_job',
              class: "btn btn_collapse btn-primary ",
              data: { toggle: 'collapse' },
              title: I18n.t('service_call.forms.provider_status.settle.tooltipoltip'),
              rel:   'tooltip',
              role: "button",
              id: "settle_subcon_button") %>


  <div class="collapse" id="settle_prov_job">

    <br>

    <%= simple_form_for job.becomes(ServiceCall), html: { id: 'provider_status_settle', class: 'blue-button' } do |f| %>
        <%= f.input :provider_payment, collection: payment_types, input_html: { id: 'service_call_provider_payment' }, label: I18n.t('service_call.forms.subcontractor_status.settle.label') %>
        <%= hidden_field_tag 'service_call[provider_status_event]', 'settle' %>
        <%= f.submit t('general.general.submit'),
                     id:    'settle_service_call_btn',
                     class: 'btn btn-primary',
                     title: I18n.t('service_call.forms.provider_status.settle.tooltip'),
                     rel:   'tooltip'
        %>
    <% end %>


  </div>

</div>