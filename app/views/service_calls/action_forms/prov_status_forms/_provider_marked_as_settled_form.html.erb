<%= simple_form_for job.becomes(ServiceCall), html: { class: 'green-blue' } do |f| %>
    <%= f.input :provider_payment, collection: payment_types, input_html: { id: 'provider_payment_type' } %>
    <%= hidden_field_tag 'service_call[provider_status_event]', 'provider_marked_as_settled' %>
    <%= f.submit job.class.human_provider_status_event_name(:provider_marked_as_settled).titleize,
                 id:    'provider_settle_service_call_btn',
                 class: 'btn btn-large btn-primary',
                 title: I18n.t('service_call.forms.provider_status.provider_marked_as_settled.tooltip'),
                 rel:   'tooltip'
    %>
<% end %>

