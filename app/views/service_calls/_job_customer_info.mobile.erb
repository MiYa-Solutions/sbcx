<h3><%= I18n.t('general.general.contact_Info')%></h3>


<div class="customer_in_service_call job_info_list">
  <ul data-role="listview">
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:customer) %></div>
        <div class="ui-block-b status_grey ">

          <% if @service_call.class != MyServiceCall || @service_call.my_role == :subcon %>
              <%= @service_call.customer.try(:name) %>
          <% else %>
              <%= link_to @service_call.customer.try(:name), customer_path(@service_call.customer.id) %>
          <% end %>

        </div>
      </div>
    </li>
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:address) %></div>
        <div class="ui-block-b"><%= @service_call.address1 %>
          <% unless @service_call.address2.blank? %>
              <br> <%= @service_call.address2 %>
          <% end %>
        </div>
      </div>
    </li>
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:city) %></div>
        <div class="ui-block-b"><%= @service_call.city %></div>
      </div>
    </li>
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:state) %></div>
        <div class="ui-block-b"><%= @service_call.state %></div>
      </div>
    </li>
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:zip) %></div>
        <div class="ui-block-b"><%= @service_call.zip %></div>
      </div>
    </li>
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:phone) %></div>
        <div class="ui-block-b"><%= link_to @service_call.phone, "tel:#{@service_call.phone}" %></div>
      </div>
    </li>
    <li class="ui-li ui-li-static">
      <div class="ui-grid-a">
        <div class="ui-block-a"><%= @service_call.class.human_attribute_name(:mobile) %></div>
        <div class="ui-block-b"><%= link_to @service_call.mobile_phone, "tel:#{@service_call.mobile_phone}" %></div>
      </div>
    </li>
    <!--<#% permitted_to? :edit, @customers do %>-->
    <% if @service_call.class == MyServiceCall %>
        <!--<li data-role="list-divider" role="heading" class="ui-li ui-li-divider ui-bar-d">Subcontractor: <#%= @service_call.subcontractor.try (:name) %></li>-->
        <li class="ui-li ui-li-static">
          <fieldset class="ui-grid-solo ui-btn-inner-small">

            <%= link_to I18n.t('general.general.edit'), edit_service_call_path, "data-role" => "button", "data-theme" => "b", "data-mini" => "true", "data-icon" => "arrow-r", "data-iconpos" => "right", "data-transition" => "slide" %>
          </fieldset>

        </li>
    <% end %>
  </ul>
</div>