<div class="title_label job_title">
  <ul>
    <li><h1 id="job_name_show"><%= best_in_place @service_call, :name %>&nbsp;<i class="icon-pencil icon-white"></i></h1></li>
    <li><h1><%= I18n.t('general.general.job_number').html_safe + ": ".html_safe + "#{@service_call.ref_id}" %></h1></li>
  </ul>
</div>

<div class="well well_height">

<div class="row-fluid">

<div class="no_margins">
  <div class="span4" id="job_statuses_actions">

    <%= render :partial => 'job_statuses' %>

    <br>

    <ul class="unstyled">
      <li>
        <div class="smart_label">
          <ul>
            <li><h1><%= I18n.t('general.general.actions') %></h1></li>
            <li></li>
          </ul>
        </div>
      </li>
      <li>
        <div class="action_buttons_service_call">
          <%= event_list(@service_call) %>
        </div>
      </li>
    </ul>

  </div>
</div>

 <!--Job details-->
    <%= render 'job_details' %>

<!--End of main row-->
</div>
<!--end of well  -->
</div>

