<% provide(:title, I18n.t('general.general.job_number').html_safe + "&nbsp;".html_safe + "#{@service_call.ref_id}") %>

<div class="title_label job_title">
  <ul>
    <li>
      <h1 id="job_name_show"><%= best_in_place @service_call.becomes(ServiceCall), :name %>&nbsp;<i class="icon-pencil icon-white"></i></h1>
    </li>

    <li id="external_job_id">
      <% if  @service_call.external_ref.present? %>
         <h1><%= Ticket.human_attribute_name(:external_ref) + ": ".html_safe + "#{@service_call.external_ref}" %></h1>
      <% end %>
    </li>
    <li></li>
    <li><h1><%= I18n.t('general.general.job_number').html_safe + ": ".html_safe + "#{@service_call.ref_id}" %></h1></li>
  </ul>
</div>

<div class="row-fluid">
  <div class="well_height job_show_well">

    <div class="span4" id="job_statuses_tab">
      <%= render :partial => 'job_actions_statuses' %>
    </div>

    <div class="span8" id="job_show_tab">

      <ul class="nav nav-tabs" id="myJobShowTab">
        <li class="active"><a href="#jobBilling" data-toggle="tab"><%= I18n.t('general.general.job_billing') %></a></li>
        <li><a href="#jobMain" data-toggle="tab"><%= I18n.t('general.general.job_main') %></a></li>
        <li><a href="#job_appointments" data-toggle="tab"><%= I18n.t('general.general.appointments') %></a></li>
        <!--<li><a href="#invoices" data-toggle="tab"><#%= Invoice.model_name.human.pluralize %></a></li>-->
        <li><a href="#jobHistory" data-toggle="tab"><%= I18n.t('general.general.job_history') %></a></li>

      </ul>

      <div class="tab-content">

        <div class="tab-pane active" id="jobBilling"><%= render 'job_billing' %></div>
        <div class="tab-pane" id="invoices"><%= render 'job_invoices' %></div>
        <div class="tab-pane" id="jobMain"><%= render 'job_details' %></div>
        <div class="tab-pane" id="job_appointments"><%= render 'job_appointments' %></div>
        <div class="tab-pane" id="jobHistory"><%= render 'job_history' %></div>


      </div>


    </div>


    <!--end well-->
  </div>

  <!--end row-->
</div>


