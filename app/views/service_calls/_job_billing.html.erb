<div class="well well_job_show well_job_history">
      <!--Billing Summary-->

      <div class="smart_label">
        <ul>
          <li><h1><%= I18n.t('general.general.billing_summary').html_safe %></h1></li>
          <li>
            <%= button_tag t('general.general.collect_payments'), :class => 'btn btn-primary',
                           id: 'new-collect-button', data: { toggle: "collapse", target: "#payment_collect" }%>
            <%= link_to t('general.general.download_invoice'), service_call_path(@service_call, format: :pdf), target: '_blank', :class => 'btn btn-primary' if @service_call.already_invoiced? %>
          </li>
        </ul>
      </div>

      <div class="row-fluid job_billing_summary">
        <div class="span7">

          <!--General Summary-->
          <table class="table table-striped table-condensed table-sbcx">
            <tbody>
            <tr>
              <td><strong> <%= t('general.general.my_profit').html_safe %></strong></td>
              <% if @service_call.try(:my_profit) < 0 %>
                  <td class="negative"><%= humanized_money_with_symbol @service_call.my_profit %></td>
              <% else %>
                  <% if @service_call.try(:my_profit) > 0 %>
                      <td class="positive"><%= humanized_money_with_symbol @service_call.my_profit %></td>
                  <% else %>
                      <td class="balanced"><%= humanized_money_with_symbol @service_call.my_profit %></td>
                  <% end %>

              <% end %>
              <td></td>

            </tr>

                <!-- Balance-->
                <% case @service_call.my_role when :subcon %>
                    <%= render 'provider_balance' %>
                <% when :broker %>
                    <%= render 'provider_balance' %>
                    <%= render 'subcon_balance' %>
                <% else %>
                    <%= render 'customer_balance' %>
                    <%= render 'subcon_balance' unless @service_call.subcon_na? %>
                <% end %>
                </tbody>
              </table>
        </div>

        <div class="span5">
          <div class="collapse" id="payment_collect">
            <div class="action_buttons_service_call">
                <div class="row-fluid">
                  <a href="#" data-toggle="collapse" data-target="#payment_collect" class="close" id="bom_close">Ã—</a>
                </div>

                  <div class="service_call_events">
                        <%= billing_status_forms(@service_call) %>
                  </div>
            </div>
         </div>
        <!--end span5-->
        </div>


      </div>





      <!-- Entries -->
      <% case @service_call.my_role when :subcon %>
          <%= render 'provider_entries' %>
      <% when :broker %>
          <%= render 'provider_entries' %>
          <%= render 'subcon_entries' %>
      <% else %>
          <%= render 'customer_entries' %>
          <%= render 'subcon_entries' unless @service_call.subcon_na? %>
      <% end %>

      <%= render 'job_boms' %>


  </div>