<div class="well well_job_show">
 <div class="row-fluid well_job_history">

    <%= render :partial => 'job_actions_statuses' %>

    <div class="span8">



        <!--Billing Summary-->

      <div class="smart_label">
        <ul>
          <li><h1><%= I18n.t('general.general.billing_summary').html_safe %></h1></li>
          <li>
            <%= link_to "Download Invoice", service_call_path(@service_call, format: :pdf), target: '_blank', :class => 'btn btn-primary' if @service_call.already_invoiced? %>
          </li>
        </ul>
      </div>

        <div class="row-fluid job_billing_summary">
          <div class="span8">

                <!--General Summary-->
                <table class="table table-striped table-condensed table-sbcx">
                  <tbody>
                      <tr>
                        <td><strong> <%= t('general.general.my_profit').html_safe %></strong></td>
                        <% if @service_call.try(:my_profit) < 0 %>
                            <td class="negative"><%= humanized_money_with_symbol @service_call.my_profit %></td>
                        <% else %>
                            <td class="positive"><%= humanized_money_with_symbol @service_call.my_profit %></td>
                        <% end %>
                        <td></td>
                        <td></td>
                      </tr>
                      <tr>
                        <td><strong> <%= "Customer Balance" %></strong></td>
                        <% if @service_call.try(:customer_balance) < 0 %>
                            <td class="negative"><%= humanized_money_with_symbol @service_call.customer_balance %></td>
                        <% else %>
                            <td class="positive"><%= humanized_money_with_symbol @service_call.customer_balance %></td>
                        <% end %>
                        <td class="show_more_button">
                            <span class="link_blue" id="show_customer_entries">
                               <%= link_to t('general.general.get_entries'), "#customer_billing_entries", class: "", data: { toggle: 'collapse' }, :title => I18n.t('general.messages.click_more').html_safe, :rel => 'tooltip' %>
                              <i class="icon-chevron-down"></i>
                            </span>
                        </td>
                        <td></td>
                      </tr>

              <!--Affiliates Balance-->
                  <% case @service_call.my_role when :subcon %>
                      <tr>
                        <td><strong><%= I18n.t('general.general.provider_balance') %></strong></td>
                        <% if @service_call.provider_balance < 0 %>
                            <td class="negative"><%= humanized_money_with_symbol @service_call.provider_balance %></td>
                        <% else %>
                            <td class="positive"><%= humanized_money_with_symbol @service_call.provider_balance %></td>
                        <% end %>
                        <td class="show_more_button">
                            <span class="link_blue" id="show_provider_entries">
                               <%= link_to t('general.general.get_entries'), "#prov_billing_entries", class: "", data: { toggle: 'collapse' }, :title => I18n.t('general.messages.click_more').html_safe, :rel => 'tooltip' %>
                              <i class="icon-chevron-down"></i>
                            </span>
                        </td>
                        <td></td>
                     </tr>
                <% when :broker %>
                      <tr>
                        <td><strong><%= I18n.t('general.general.provider_balance') %></strong></td>
                        <% if @service_call.provider_balance < 0 %>
                            <td class="negative"><%= humanized_money_with_symbol @service_call.provider_balance %></td>
                        <% else %>
                            <td class="positive"><%= humanized_money_with_symbol @service_call.provider_balance %></td>
                        <% end %>
                        <td class="show_more_button">
                            <span class="link_blue" id="show_prov_entries">
                               <%= link_to t('general.general.get_entries'), "#prov_billing_entries", class: "", data: { toggle: 'collapse' }, :title => I18n.t('general.messages.click_more').html_safe, :rel => 'tooltip' %>
                              <i class="icon-chevron-down"></i>
                            </span>
                        </td>
                        <td></td>
                      </tr>
                      <tr>
                        <td><strong><%= I18n.t('general.general.subcontractor_balance') %></strong></td>
                        <% if @service_call.subcon_balance < 0 %>
                            <td class="negative"><%= humanized_money_with_symbol @service_call.subcon_balance %></td>
                        <% else %>
                            <td class="positive"><%= humanized_money_with_symbol @service_call.subcon_balance %></td>
                        <% end %>
                        <td class="show_more_button">
                            <span class="link_blue" id="show_subcon_entries">
                               <%= link_to t('general.general.get_entries'), "#subco_billing_entries", class: "", data: { toggle: 'collapse' }, :title => I18n.t('general.messages.click_more').html_safe, :rel => 'tooltip' %>
                              <i class="icon-chevron-down"></i>
                            </span>
                        </td>
                        <td></td>
                      </tr>
                <% else %>
                      <tr>
                        <td><strong><%= I18n.t('general.general.subcontractor_balance') %></strong></td>
                        <% if @service_call.subcon_balance < 0 %>
                            <td class="negative"><%= humanized_money_with_symbol @service_call.subcon_balance %></td>
                        <% else %>
                            <td class="positive"><%= humanized_money_with_symbol @service_call.subcon_balance %></td>
                        <% end %>
                        <td class="show_more_button">
                            <span class="link_blue" id="show_subconractor_entries">
                               <%= link_to t('general.general.get_entries'), "#subco_billing_entries", class: "", data: { toggle: 'collapse' }, :title => I18n.t('general.messages.click_more').html_safe, :rel => 'tooltip' %>
                              <i class="icon-chevron-down"></i>
                            </span>
                        </td>
                        <td></td>
                      </tr>
                <% end %>
                  </tbody>
                </table>
          </div>

        </div>

    <!--Subcon Entries-->
    <div class="collapse" id="subco_billing_entries">
  <div class="row-fluid">
    <div class="smart_label">
      <ul>
        <li><h1><%= I18n.t('general.general.subcon_entries').html_safe %></h1>
        <li></li>
      </ul>
    </div>

    <table class="table table-striped" id="subcon_entries_in_service_call">
      <thead>
      <tr>
        <th><%= AccountingEntry.human_attribute_name(:id) %> </th>
        <th><%= AccountingEntry.human_attribute_name(:account) %> </th>
        <th><%= Account.human_attribute_name(:accountable_type).titleize %> </th>
        <th><%= AccountingEntry.human_attribute_name(:created_at) %> </th>
        <th><%= AccountingEntry.human_attribute_name(:type) %></th>
        <th><%= AccountingEntry.human_attribute_name(:description) %></th>
        <th><%= AccountingEntry.human_attribute_name(:amount) %> </th>
      </tr>
      </thead>
      <tbody>
      <% @service_call.subcon_entries.each do |entry| %>
          <tr>
            <td><%= entry.id %></td>
            <td><%= entry.account.accountable.name %></td>
            <td><%= entry.account.accountable.class.model_name.human %></td>
            <td><%= l entry.created_at %></td>
            <td><%= entry.type.constantize.model_name.human %></td>
            <td><%= entry.description %></td>
            <td><%= humanized_money_with_symbol entry.amount %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <br>
</div>

    <!--provider Entries-->
    <div class="collapse" id="prov_billing_entries">
  <div class="row-fluid">
    <div class="smart_label">
      <ul>
        <li><h1><%= I18n.t('general.general.provider_entries').html_safe %></h1>
        <li></li>
      </ul>
    </div>

    <table class="table table-striped" id="prov_entries_in_service_call">
      <thead>
      <tr>
        <th><%= AccountingEntry.human_attribute_name(:id) %> </th>
        <th><%= AccountingEntry.human_attribute_name(:account) %> </th>
        <th><%= Account.human_attribute_name(:accountable_type).titleize %> </th>
        <th><%= AccountingEntry.human_attribute_name(:created_at) %> </th>
        <th><%= AccountingEntry.human_attribute_name(:type) %></th>
        <th><%= AccountingEntry.human_attribute_name(:description) %></th>
        <th><%= AccountingEntry.human_attribute_name(:amount) %> </th>
      </tr>
      </thead>
      <tbody>
      <% @service_call.provider_entries.each do |entry| %>
          <tr>
            <td><%= entry.id %></td>
            <td><%= entry.account.accountable.name %></td>
            <td><%= entry.account.accountable.class.model_name.human %></td>
            <td><%= l entry.created_at %></td>
            <td><%= entry.type.constantize.model_name.human %></td>
            <td><%= entry.description %></td>
            <td><%= humanized_money_with_symbol entry.amount %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <br>
</div>


    <!--customer Entries-->
        <div class="collapse" id="customer_billing_entries">
          <div class="row-fluid">
            <div class="smart_label">
              <ul>
                <li><h1><%= I18n.t('general.general.provider_entries').html_safe %></h1>
                <li></li>
              </ul>
            </div>

            <table class="table table-striped" id="customer_entries_in_service_call">
              <thead>
              <tr>
                <th><%= AccountingEntry.human_attribute_name(:id) %> </th>
                <th><%= AccountingEntry.human_attribute_name(:account) %> </th>
                <th><%= Account.human_attribute_name(:accountable_type).titleize %> </th>
                <th><%= AccountingEntry.human_attribute_name(:created_at) %> </th>
                <th><%= AccountingEntry.human_attribute_name(:type) %></th>
                <th><%= AccountingEntry.human_attribute_name(:description) %></th>
                <th><%= AccountingEntry.human_attribute_name(:amount) %> </th>
              </tr>
              </thead>
              <tbody>
              <% @service_call.provider_entries.each do |entry| %>
                  <tr>
                    <td><%= entry.id %></td>
                    <td><%= entry.account.accountable.name %></td>
                    <td><%= entry.account.accountable.class.model_name.human %></td>
                    <td><%= l entry.created_at %></td>
                    <td><%= entry.type.constantize.model_name.human %></td>
                    <td><%= entry.description %></td>
                    <td><%= humanized_money_with_symbol entry.amount %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <br>
          <br>
        </div>



        <%= render 'job_boms' %>

    <!--end of span8-->
    </div>

<!--end of well-->
 </div>
</div>


