<%= simple_form_for Statement.new do |f| %>

    <%= f.hidden_field :account_id, value: account.id %><br />
    <%= f.input :notes %><br />
    <%= f.input :exclude_zero_balance, as: :boolean %><br />

    <%= f.submit t('general.general.new_statement'), class: "btn btn-medium btn-primary" %>
<% end %>
