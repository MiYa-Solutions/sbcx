<table class="table table-striped">
  <thead>
  <tr>
    <th>Enabled?</th>
    <th>Email?</th>
    <th>Name</th>
    <th>Description</th>
  </tr>
  </thead>
  <tbody>
  <% notif_names.each do |notification| %>
      <tr>
        <td><%= best_in_place @settings.notifications_form,
                              notification.to_sym,
                              object_name: :settings,
                              type:        :checkbox,
                              path:        settings_path,
                              collection:  [raw("<i class='icon-remove'></i>"), raw("<i class='icon-ok'></i>")] %></td>
        <td><%= best_in_place @settings.notifications_form,
                              "#{notification}_email".to_sym,
                              object_name: :settings,
                              type:        :checkbox,
                              path:        settings_path,
                              collection:  [raw("<i class='icon-remove'></i>"), raw("<i class='icon-ok'></i>")] %></td>
        <td><%= notification.classify.constantize.model_name.human %></td>
        <td><%= I18n.t("notifications.#{notification}.description") %></td>
      </tr>
  <% end %>

  </tbody>
</table>