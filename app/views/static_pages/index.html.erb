<% provide(:title, 'Welcome') %>

<div class="background_welcome">
  <%= image_tag("bg7.jpg", id: "background_welcome") %>
</div>

<div class="welcomepage_frame">

  <div class="row-fluid ">
    <div class="span1"></div>
    <div class="span10">

      <div class="slide_welcome">

        <div class="carousel slide" id="myCarousel">
          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag "slide1.png" %>
            </div>
            <div class="item">
              <%= image_tag "slide2.png" %>
            </div>
            <div class="item">
              <%= image_tag "slide3.png" %>
            </div>
            <!--<div class="item">-->
              <!--<#%= image_tag "slide4.png" %>-->
            <!--</div>-->
          </div>
          <a data-slide="prev" href="#myCarousel" class="left carousel-control">‹</a>
          <a data-slide="next" href="#myCarousel" class="right carousel-control">›</a>
        </div>

      </div>

      <div class="welcome_benefits">

        <div class="row-fluid">
          <h1>SubConTraX allows small-mid size service providers and independent workers to manage & grow their business.</h1>
          <h2>Engage in joint projects - search for potential affiliates, invite them to join their network, propose and negotiate agreement terms, and enable transferring and receiving of jobs.</h2>
          <div class="row-fluid">
              <div class="span8">
                <h4>benefits</h4>
              </div>
              <div class="span4">
                  <h4>Sign Up for Free</h4>
              </div>
         </div>
          </div>

        <div class="row-fluid">
          <div class="span8">

            <div class="row-fluid">
              <!--Manage Jobs-->
                <div class="benefit">

                  <div class="benefit_icon">
                    <%= image_tag("index/Jobs.png", alt: "MiYa") %>
                  </div>

                  <div class="benefit_text">
                    <h3>Manage Jobs</h3>
                    <p>Manage your jobs and opportunities. <br> Monitor Jobs that you outsourced to your subcontractors </p>
                  </div>
                </div>
              <!--Your Network-->
                <div class="benefit">
                  <div class="benefit_icon">
                    <%= image_tag("index/Invite.png", alt: "MiYa") %>
                  </div>

                  <div class="benefit_text">
                    <h3>Your Network</h3>
                    <p>Propose, negotiate, sign and manage working agreements with contractors and subcontractors</p>
                  </div>
                </div>

            </div>
            <div class="row-fluid">
                <!--Billing--->
                <div class="benefit">
                  <div class="benefit_icon">
                    <%= image_tag("index/sell.png", alt: "MiYa") %>
                  </div>

                  <div class="benefit_text">
                    <h3>Billing</h3>
                    <p>Generate & update balance sheets for your customers,  contractors and subcontractors</p>
                  </div>
                </div>
                <!--Alerts-->
                <div class="benefit">
                  <div class="benefit_icon">
                    <%= image_tag("index/Alerts.png", alt: "MiYa") %>
                  </div>

                  <div class="benefit_text">
                    <h3>Alerts & Tracking</h3>
                    <p>Receive alerts and respond accordingly. Track status of each job assigned to you or transferred by you</p>
                  </div>
                </div>
            </div>
            <div class="row-fluid">
                  <!--Dispatch-->
                <div class="benefit">
                  <div class="benefit_icon">
                    <%= image_tag("index/oneClick.png", alt: "MiYa") %>
                  </div>

                  <div class="benefit_text">
                    <h3>Dispatch Jobs</h3>
                    <p>Quickly & Easily Dispatch your Technicians. <br> 1-click job transfer to currently available subcontractors</p>
                  </div>
                </div>
                  <!--Parts-->
                <div class="benefit">
                  <div class="benefit_icon">
                    <%= image_tag("index/Parts.png", alt: "MiYa") %>
                  </div>

                  <div class="benefit_text">
                    <h3>Manage Parts</h3>
                    <p>Manage Parts and Inventory</p>
                  </div>
                </div>
            </div>
          </div>

         <div class="span4">
           <a class="btn btn-large btn-primary" href="/users/sign_up">Sign Up &raquo;</a>
           <h6>Or, fill out the form below and we will contact you soon</h6>

           <!--form-->
           <div class="row-fluid">
             <div class="welcome_contactus">

               <%= simple_form_for @message, :url => contact_us_path, :html => { :class => 'form-horizontal' } do |form| %>

                       <%= form.input :name, :input_html => { :class => "login_hint", :title => '*Name', :name =>"name" } %>
                       <%= form.input :email, "type" => "email", :input_html => { :class => "login_hint", :title => '*Email', :name =>"email" } %>
                       <%= form.input :phone, :input_html => { :class => "login_hint", :title => '*Phone', :name =>"phone" } %>
                       <%= form.text_area :content, :rows => "4", :html => { :class => 'login_hint', :title => '*Note', :name =>"note" } %>

                       <%= form.submit I18n.t('general.general.contact_us'), :class => 'btn btn-large btn-primary' %> </br>
               <% end %>

             </div>
           </div>

         </div>


        </div>

      </div>

      <!--<div class="well_welcome">-->
        <!--<div class="row-fluid">-->

          <!--<div class="span7 welcome_benefits">-->
             <!--<h1><#%= image_tag("smallLogo_index.png", alt: "MiYa") %> allows small-mid size service providers and independent workers to manage & grow their business.</h1>-->
             <!--<h2>Our collaboration platform allow users to easily search for potential affiliates, invite them to join their network, propose and negotiate agreement terms, and enable transferring and receiving of jobs.</h2>-->
          <!--</div>-->

          <!--<div class="span5">-->


          <!--</div>-->

        <!--</div>-->


      <!--</div>-->
    </div>
  </div>
</div>
