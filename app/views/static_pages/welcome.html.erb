<table class="table table-striped" id="providers_search_results">
  <% if !@notifications.empty? %>

      <thead>
      <tr>
        <th><%= Notification.human_attribute_name(:subject) %></th>
        <th><%= Notification.human_attribute_name(:content) %></th>
        <th><%= Notification.human_attribute_name(:status) %></th>
        <th> Actions</th>
      </tr>
      </thead>
  <% else %>
      <span class="alert alert-info" id="empty_search_result_notice">No records</span>
      <br>
      <br>
  <% end %>


  <tbody id="notifications">
  <% @notifications.each do |notification| %>
      <%= render 'notifications/notification', notification: notification %>
  <% end %>

  </tbody>
</table>


