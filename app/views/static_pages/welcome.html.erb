<div class="row-fluid">

    <div class="span6" id= "home-notifications">
        <%= render :partial => 'welcome_notifications' %>
    </div>


  <div class="span6" id= "home-billing">
    <div class="well well-home">

      <div class="smart_label">
        <ul>
          <li><h1><%= I18n.t('general.general.billing') %></h1></li>
          <li></li>
        </ul>
      </div>

      <br>

      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= Affiliate.model_name.human %></th>
          <th><%= AccountingEntry.human_attribute_name(:balance) %></th>
        </tr>
        </thead>
        <tbody>
        <% @affiliates.each do |affiliate| %>
          <% unless current_user.organization.account_for(affiliate).balance == 0 %>
            <tr>
                <td><%= link_to affiliate.name, affiliate_path(affiliate) %></td>
              <% if current_user.organization.account_for(affiliate).balance > 0 %>
                <td><%= humanized_money_with_symbol current_user.organization.account_for(affiliate).balance %></td>
              <% else %>
                <td class="red_balance"><%= humanized_money_with_symbol current_user.organization.account_for(affiliate).balance %></td>
            <% end %>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>


</div>



<div class="row-fluid">

  <div class="span6" id= "home-service-calls">
    <%= render :partial => 'welcome_jobs' %>
  </div>

  <!--Calendar-->
  <div class="span6" id= "home-incoming">
    <div class="well">
      <div class="smart_label">
        <ul>
          <li><h1><%=I18n.t('general.general.calendar') %></h1></li>
          <li><%= link_to Appointment.model_name.human, calendar_path, :class => 'btn btn-primary' %></li>
        </ul>
      </div>
      <br>

      <div id="calendar"></div>
      <br>
    </div>

  </div>

</div>

