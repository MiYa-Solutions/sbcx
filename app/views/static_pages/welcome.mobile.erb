<% provide(:title, "Welcome") %>

<br>
<div class="homepage">

<ul data-role="listview">

  <li data-role="list-divider" role="heading" class="ui-li ui-li-divider ui-bar-d"><%= Notification.model_name.human  %>
    <div class= "show_all_notifications">
      <%= link_to I18n.t('general.general.see_all'), notifications_path, "data-role" => "button", id: 'show-all-notifications-button', "class" => "ui-btn ui-shadow ui-btn-corner-all ui-mini ui-btn-inline ui-btn-up-b" %>
    </div>
        <span class="alert_label_mobile">
                <badge><%= @notification_count %></badge>
        </span>
  </li>
  <% @notifications.sort_by{|t| - t.created_at.to_i}.first(5).reverse.each do |notification| %>
  <li class="inline_mobile"><%= link_to notification.subject, notification.becomes(Notification), "data-transition" => "slide", id: "jobs_welcome" %>
    <% if notification.human_status_name == 'unread' %>
            <span class="new_alert_label">
                <img src="/assets/emails.png">
            </span>
    <% end %>
   </li>
  <% end %>


  <li data-role="list-divider" role="heading" class="ui-li ui-li-divider ui-bar-d"><%= I18n.t('general.general.balance')%></li>
  <li class="affiliate_balance_home">
      <% @affiliates.each do |affiliate| %>

          <% unless current_user.organization.account_for(affiliate).balance == 0 %>
              <%= link_to affiliate.name, affiliate_path(affiliate) %>
            <p>
              <% if current_user.organization.account_for(affiliate).balance < 0 %>
                        <span class="red_badge_collape">
                            <badge><%= humanized_money_with_symbol current_user.organization.account_for(affiliate).balance %></badge>
                        </span>
              <% else %>
                        <span class="blue_badge_collape">
                            <badge><%= humanized_money_with_symbol current_user.organization.account_for(affiliate).balance %></badge>
                        </span>
              <% end %>
            </p>

          <% end %>
      <% end %>
  </li>

</ul>

</div>







