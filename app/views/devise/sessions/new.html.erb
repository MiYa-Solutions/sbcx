<div class="row-fluid" id="Sign-in">

<div class="well">
  <div class="row" style="padding-left: 15px" >
    <div class="label" style="font-size: 18pt; height: 32px; padding-top: 5px" >
      <div class="span6" style="padding-top: 7px">
        Sign In
      </div>
    </div>
  </div>

  <br>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

              <%= f.input :email %>
              <%= f.input :password %>
              <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", :class => 'btn btn-large btn-primary' %>
        </div>

  <% end %>

      <%= render "links" %>

</div>
  </div>