<%= simple_form_for([@ticket, @bom], :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs" id= "hi">
      <!--<div class="control-group string ">-->
        <!--<div class="controls">-->

      <div class="customer_contacts">

        <div class="ui-grid-a">
          <div class="ui-block-a">Part Name:</div>
          <div class="ui-block-b"> <%= f.text_field :material_name, placeholder: 'material', data: { autocomplete_source: materials_path }, label: "Part Name:" %></div>
        </div>
        <div class="ui-grid-a">
          <div class="ui-block-a">Quantity:</div>
          <div class="ui-block-b"> <%= f.text_field :quantity, placeholder: 'quantity' %></div>
        </div>
        <div class="ui-grid-a">
          <div class="ui-block-a">List Price:</div>
          <div class="ui-block-b"><%= f.text_field :price, placeholder: 'price' %></div>
        </div>
        <div class="ui-grid-a">
          <div class="ui-block-a">Cost:</div>
          <div class="ui-block-b">  <%= f.text_field :cost, placeholder: 'cost' %></div>
        </div>


        <!--</div>-->
      </div>
    </div>

    <div class="miya_blue_button">
      <%= f.submit I18n.t('general.general.add_part') , "data-role" => "button", "data-theme" => "b", :class => "ui-btn-up-b", "data-icon" => "check", "data-iconpos" => "left", "data-transition" => "slide" %>
    </div>
<% end %>
