<% provide(:title, @organization.name) %>

<div class="well">

  <div class="row-fluid">
    <div class="span5">
      <div class="smart_label"  >
        <ul>
          <li><h1><%= @organization.name %></h1> </li>
          <li>
            <%= link_to 'Send Invite' , new_provider_path, :class => 'btn btn-large btn-info' %>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span5">
      <table class="table table-striped table-condensed">
        <tbody>
        <tr>
          <td>Company:</td>
          <td><h4><%= @organization.name %></h4></td>
        </tr>
        <tr>
          <td>Address:</td>
          <td><h4><%= @organization.address1 %> <%= @organization.address2 %></h4></td>
        </tr>
        <tr>
          <td>City:</td>
          <td><h4><%= @organization.city %></h4></td>
        </tr>
        <tr>
          <td>State:</td>
          <td><h4><%= @organization.state %></h4></td>
        </tr>
        <tr>
          <td>Country:</td>
          <td><h4><%= @organization.country %></h4></td>
        </tr>
        <tr>
          <td>Zip:</td>
          <td><h4><%= @organization.zip %></h4></td>
        </tr>
        <tr>
          <td>Phone:</td>
          <td><h4><%= @organization.phone %></h4></td>
        </tr>
        <tr>
          <td>Mobile Phone:</td>
          <td><h4><%= @organization.mobile %></h4></td>
        </tr>
        <tr>
          <td>Email:</td>
          <td><h4><%= @organization.email %></h4></td>
        </tr>
        <tr>
          <td>Website:</td>
          <td><h4><%= @organization.website %></h4></td>
        </tr>
        <tr>
          <td>Roles:</td>
          <td>
            <% for role in @organization.organization_roles %>
                <table>
                  <tbody>
                  <tr>
                    <span class="label label-info"><%= role.name %></span>
                  </tr>
                  </tbody>
                </table>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Linked to:</td>
          <td>
            <%= render partial: 'organization_associations' %>
          </td>
        </tr>
        </tbody>
      </table>

    </div>
  </div>


  <div class="form-actions">
    <%= link_to 'Back', organizations_path, :class => 'btn btn-medium' %>
    <%= link_to 'Edit', edit_organization_path(@organization), :class => 'btn btn-medium btn-primary' %>
    <%= link_to 'Archive', organization_path(@organization), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>

  </div>



</div>

