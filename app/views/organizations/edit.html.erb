<% provide(:title, "Edit Organization") %>

<div class="well">

  <div class="row-fluid">
    <div class="span10">
      <div class="smart_label"  >
        <h1>Edit Your Organization Profile:</h1>
      </div>
    </div>
  </div>

  <br>

  <div class="row-fluid">
    <div class="span10 ">
      <%= simple_form_for @organization, :html => {:class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>

          <div class="form-actions">
            <%= link_to 'Back', providers_path, :class => 'btn btn-medium' %>
            <%= f.submit "Save Changes", class: "btn btn-medium btn-primary" %>
          </div>
      <% end %>

    </div>
  </div>

</div>
