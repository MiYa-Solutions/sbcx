<% account ||= nil %>
<div id="ticket_search" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="ticket_search_header"><%= I18n.t('general.general.find_job') %></h3>
  </div>
  <div class="modal-body" id="ticket_search_body">
    <div>
          <label class="search_job_help">You can search for the job's name by typing in the search tex box</label>
          <%= hidden_field_tag :account_id, account.try(:id) %>
          <br><label class="search_job_help">Click the Job you wish to add a new entry to.</label>
    </div>
    <div id="search-results">
      <table class="table table-striped display table-bordered" id="search-results-table">
        <thead>
        <tr>
          <th><%= Ticket.human_attribute_name(:id) %></th>
          <th><%= Ticket.human_attribute_name(:name) %></th>
          <th><%= Ticket.human_attribute_name(:status) %></th>
          <th><%= Ticket.human_attribute_name(:work_status) %></th>
          <th><%= Ticket.human_attribute_name(:billing_status) %></th>
        </tr>
        </thead>
        <tbody>

        </tbody>
      </table>

    </div>
  </div>
  <div class="modal-footer" id="ticket_search_footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>