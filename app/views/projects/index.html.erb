<div class="well well_height">
  <div class="row-fluid">


  <div class="row-fluid">
  <div class="smart_label">
    <ul>
      <li><h1><%= Project.model_name.human %></h1></li>
      <li>
        <%= link_to I18n.t('general.general.new_project'), new_project_path, :class => 'btn btn-primary' %></li>

      </li>
    </ul>
  </div>


 <div class="row-fluid">

  <div id="table-filters" class="all_jobs_filter" data-statuses="<%= project_statuses %>" data-tags="<%= current_user.organization.tags.map(&:name) %>">

    <h4><%= t('general.general.filter_all_jobs_l1') %>

      <div class="header5">
        <%= t('general.general.filter_all_jobs_l2') %>
      </div>
    </h4>
    <div class="row-fluid">

          <div class="span3">
            <div id="status_filter" class="input_field"></div>

          </div>
          <div class="span3">
            <div id="provider_filter" class="input_field">
              <%= select_tag :provider, provider_filter_options, class: 'chosen-select', id: 'project_provider_filter', include_blank: true %>
              <%= button_tag 'x', type: 'button', id: 'clear-provider', class: 'yadcf-filter-reset-button cancel_filter_btn' %>
            </div>

          </div>
          <div class="span3">
            <div class="input_field">
              <div id="customer_filter" class="chosen-container-multi chosen-choices customer_field yadcf-filter-wrapper">
                <%= text_field_tag :customer_search, nil,
                                   placeholder:           'Customer',
                                   'data-autocomplete'    => '/service_calls/autocomplete_customer_name',
                                   'data-update-elements' => { id: '#customer_filter_id' }.to_json,
                                   'data-ref-id'          => ''
                %>
                <%= button_tag 'x', type: 'button', id: 'clear-customer', class: 'yadcf-filter-reset-button cancel_filter_btn' %>
              </div>
              <%= hidden_field_tag :customer_filter_id %>
            </div>

          </div>
          <div class="span3">
            <div id="created_range_filter" class="input_field"></div>

          </div>
    </div>

  </div>

  <br>
  <div class="row-fluid projects_table">
          <table class="projects table table-striped display table-bordered">
            <thead>
            <tr>
              <th><%= Project.human_attribute_name(:id) %></th>
              <th><%= Project.human_attribute_name(:created_at) %></th>
              <th><%= Project.human_attribute_name(:name) %></th>
              <th><%= Project.human_attribute_name(:status) %></th>
              <th><%= Project.human_attribute_name(:customer) %></th>
              <th><%= Project.human_attribute_name(:provider) %></th>
            </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
      </div>
</div>




<br/>

    </div>


<!--end of well-->
</div>
</div>