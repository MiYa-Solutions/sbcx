<br>
<div class="edit_job_details">
  <div class="ui-grid-a">
    <div class="ui-block-a"><%= @project.class.human_attribute_name(:name) %></div>
    <div class="ui-block-b"> <%= f.input :name %></div>
  </div>


  <div class="ui-grid-a">
    <div class="ui-block-a"><%= @project.class.human_attribute_name(:status) %></div>
    <div class="ui-block-b">
      <%= f.input :status, collection: Project.state_machines[:status].states, label_method: :human_name, value_method: :value, :include_blank => f.object.human_status_name %>
    </div>
  </div>

  <div class="ui-grid-a">
    <div class="ui-block-a"><%= t('general.general.select_contractor') %></div>
    <div class="ui-block-b">
      <%= f.select :provider_id, local_provider_options, include_blank: true %>
    </div>
  </div>

 <div class="ui-grid-a">
    <div class="ui-block-a"></div>
    <div class="ui-block-b"><%= select_tag 'project[provider_agreement_id]', collection: [], select: "none" %></div>

 </div>



 <div class="ui-grid-a">
    <div class="ui-block-a"><%= t('general.general.customer') %></div>
    <div class="ui-block-b">
      <%= f.input :customer_name, input_html: { id: "customer-autocomplete", data: { ref_id: "" } }, :label => "Customer Search" %>
      <%= f.hidden_field :customer_id %>
    </div>

 </div>
</div>
<div>
  <ul id='customer-suggestions' data-role="listview" data-inset="true"></ul>
</div>
<div class="ui-grid-a">
  <div class="ui-block-a"><%= @project.class.human_attribute_name(:start_date) %></div>
  <div class="ui-block-b"><%= f.text_field :start_date, class: "mobi-datetime", format: :short %></div>
</div>
<div class="ui-grid-a">
  <div class="ui-block-a"><%= @project.class.human_attribute_name(:end_date) %></div>
  <div class="ui-block-b"><%= f.text_field :end_date, class: "mobi-datetime", format: :short %></div>
</div>
<div class="ui-grid-a">
  <div class="ui-block-a"><%= @project.class.human_attribute_name(:external_ref) %></div>
  <div class="ui-block-b project_ext_ref_label"> <%= f.input :external_ref %></div>
</div>

