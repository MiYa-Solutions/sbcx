<% provide(:title, @project.name) %>

<div class="title_label job_title">

  <ul>
    <li><h1><%= Project.model_name %>:</h1></li>
    <li><h1><%= @project.name %></h1></li>
    <li></li>
  </ul>
</div>


<div class="well well_height">

  <div class="row-fluid">
    <div class="no_margins">

      <!--<p id="notice"><#%= notice %></p>-->

      <div class="span6">

        <div class="affiliate_info">
          <div class="smart_label">
            <ul>
              <li><h1><%= I18n.t('general.general.project_Info') %></h1></li>
              <li></li>
            </ul>
          </div>


            <div class="row-fluid">
            <div class="span6">
              <table class="table table-striped table-condensed">
                <tbody>
                  <tr>
                    <td><strong><%= Project.human_attribute_name(:customer) %></strong></td>
                    <td><%= link_to @project.customer_name, @project.customer if @project.customer %></td>
                  </tr>
                <tr>
                  <td><strong><%= Project.human_attribute_name(:status) %></strong></td>
                  <td><%= @project.status_name %></td>
                </tr>
                  <% if @project.provider %>


                          <tr>
                          <td><strong><%= Project.human_attribute_name(:provider) %></strong></td>
                          <td><%= @project.provider.name if @project.provider %></td>
                        </tr>

                        <tr>
                          <td><strong><%= Project.human_attribute_name(:provider_agreement) %></strong></td>
                          <td><%= @project.provider_agreement.name if @project.provider_agreement %>
                          </td>
                        </tr>

                  <% end %>

                </tbody>
              </table>
            </div>

            <div class="span6">
              <table class="table table-striped table-condensed">
                <tbody>
                <tr>
                  <td>
                  <strong><%= Project.human_attribute_name(:description) %></strong>
                  </td>
                </tr>
                <tr>
                  <td>
                  <%= @project.description %>
                  </td>
                </tr>
                </tbody>
              </table>

            </div>

          </div>

          <!--end project info-->


          <div class="form-actions">


            <%= link_to 'Edit', edit_project_path(@project), :class => 'btn btn-medium' %>
            <%= link_to 'Back', projects_path, :class => 'btn btn-medium btn-primary' %>

          </div>
       </div>

     </div>

      <div class="span6">
        <div class="affiliate_jobs">

          <%= render 'shared/job_list', model: @project, title: 'Project Jobs', table_id: 'project-jobs' %>


          <br>
          <%= render 'invoices/invoice_list', invoiceable: @project, account: @project.customer.account if @project.customer %>
        </div>


    </div>

  </div>
</div>
</div>






