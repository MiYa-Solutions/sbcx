<div class="well well_height">

  <div class="row-fluid">




  <div class="row-fluid">
    <div class="span6">

      <div class="smart_label">
        <ul>
          <li><h1><%= @support_ticket.subject %></h1></li>
          <li></li>
        </ul>
      </div>

      <table class="table table-striped table-condensed">
        <tbody>
        <tr>
            <td><strong><%= SupportTicket.human_attribute_name(:subject) %></strong></td>
            <td><%= @support_ticket.subject %></td>
        </tr>
        <tr>
          <td><strong><%= SupportTicket.human_attribute_name(:status) %></strong></td>
          <td><%= @support_ticket.status %></td>
        </tr>
        <tr>
          <td><strong><%= SupportTicket.human_attribute_name(:created_at) %></strong></td>
          <td><%= l @support_ticket.created_at %></td>
        </tr>
        <tr>
          <td><strong><%= SupportTicket.human_attribute_name(:creator) %></strong></td>
          <td><%= @support_ticket.creator.name %></td>
        </tr>
        <tr>
          <td><strong><%= SupportTicket.human_attribute_name(:updated_at) %></strong></td>
          <td><%= l @support_ticket.updated_at %></td>
        </tr>
        <tr>
          <td><strong><%= SupportTicket.human_attribute_name(:updater) %></strong></td>
          <td><%= @support_ticket.updater.name %></td>
        </tr>
        <tr>
          <td><strong><%= SupportTicket.human_attribute_name(:description) %></strong></td>
          <td><%= @support_ticket.description %></td>
        </tr>

        </tbody>
      </table>


      <div class="form-actions">
        <%= link_to I18n.t('general.general.back'), support_tickets_path, :class => 'btn btn-medium' %>
        <%= link_to I18n.t('general.general.edit'), edit_support_ticket_path(@support_ticket), :class => 'btn btn-medium btn-primary' %>
      </div>


    </div>



    <div class="span6">

      <div class="smart_label">
        <ul>
          <li><h1><%= t('general.general.comments') %></h1></li>
          <li></li>
        </ul>
      </div>
      <br>

      <%= render 'comments/form', comment: @new_comment %>


                  <div id="comments">
                    <table class="table table-striped table-condensed">
                      <thead>
                        <th><%= SupportTicket.human_attribute_name(:creator) %></th>
                        <th><%= SupportTicket.human_attribute_name(:created_at) %></th>
                        <th><%= SupportTicket.human_attribute_name(:description) %></th>
                        <th><%= t('general.general.actions') %></th>
                      </thead>
                      <tbody>
                            <%= render partial: 'comments/comment', collection: @comments if @comments.size > 0 %>
                      </tbody>
                    </table>
                   </div>


    </div>
  </div>
  <!--end row-->
  </div>
  <!--end well-->
</div>



