<%= form_tag subcontractors_path, id: "agreement_search_form", :method => :get, :remote => true do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<ul class="subcontractors" id="new_subcontractors">

</ul>

<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Company</th>
    <th></th>
    <th></th>
  </tr>
  <% for subcontractor in @new_subcontractors %>
      <tr>
        <td><%= subcontractor.id %></td>
        <td><%= link_to subcontractor.name, subcontractor_path(subcontractor) %></td>
        <td><%= subcontractor.company %></td>
        <td><%= link_to t('.show_link'), subcontractors_path(subcontractor) %></td>
        <td><%= link_to "Edit", edit_subcontractor_path(subcontractor) %></td>
      </tr>
  <% end %>
</table>

<p><%= link_to t('subcontractors.buttons.create'), new_subcontractor_path, class: 'btn' %></p>
<p><%= link_to t('.create_button'), new_subcontractor_path, class: 'btn' %></p>
