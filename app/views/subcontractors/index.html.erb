<div class="well">

  <div class="smart_label"  >
    <ul>
      <li><h1>My Subcontractors</h1></li>
      <li>
        <%= form_tag subcontractors_path, id: "agreement_search_form", :method => :get, :remote => true do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil, class: 'btn btn-medium' %>
        <% end %>
      </li>
      <li>
        <%= link_to 'New Subcontractor', new_subcontractor_path, :class => 'btn btn-primary' %>
      </li>
    </ul>
  </div>
  <br>

  <% if @new_subcontractors.empty? %>
      <span class="alert alert-info">No records, click "Add Subcontractor" to add new contact</span>
  <% else %>


      <table class="table table-striped" >
        <thead>
        <tr>
          <th>Name</th>
          <th>Company</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody id="new_subcontractors">
        <% @new_subcontractors.each do |subcontractor| %>
            <%= render subcontractor %>
        <% end %>

        </tbody>
      </table>

      <%= will_paginate @new_subcontractors, :class => 'pagination pagination-centered' %>

  <% end %>

 </div>