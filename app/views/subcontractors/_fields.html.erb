<fieldset>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.input :name, label: 'Name', autofocus: true %>
  <%= f.input :company %>
  <%= f.input :phone %>
  <%= f.input :mobile %>
  <%= f.input :email, as: :email %>
  <%= f.input :website, as: :url %>


  <%= f.input :address1 %>
  <%= f.input :address2 %>

  <div class="control-group string mandatory">
    <label class="string optional control-label" for="provider_country">Country</label>

    <div class="controls">
      <%= f.country_select :country, { priority: %w[US] } %>
    </div>
  </div>

  <div class="control-group string mandatory">
    <label class="string optional control-label" for="provider_state">State</label>

    <div class="controls">
      <%= render 'subregion_select', f: f %>
    </div>
  </div>

  <%= f.input :city %>
  <%= f.input :zip %>
  <%= f.input :status_event, collection: f.object.status_transitions, label_method: :human_to_name, value_method: :event, :include_blank => f.object.human_status_name %>



</fieldset>