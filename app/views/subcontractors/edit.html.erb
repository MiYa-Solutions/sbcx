<% provide(:title, "Edit Subcontractor") %>

<div class="well">

  <div class="row-fluid">
      <div class="smart_label"  >
        <h1>Edit <%= @subcontractor.name %> Info:</h1>
      </div>
  </div>

  <br>

  <div class="row-fluid">
    <div class="span5 ">
      <%= simple_form_for @subcontractor, url: subcontractor_url(@subcontractor), :html => {:class => 'form-horizontal' } do |f| %>
          <%= render 'fields', f: f %>

         <div class="form-actions">
          <%= link_to 'Back', subcontractors_path, :class => 'btn btn-medium' %>
          <%= f.submit "Save Changes", class: "btn btn-medium btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>

</div>


