<% provide(:title, I18n.t('general.general.manage_parts')) %>


<br>

<div class="search_network">
  <%= form_tag materials_path, id: "material_search_form", :method => :get, :remote => true, :class => "ui-listview-filter ui-bar-c", "role" => "search" do %>
      <div class="ui-input-search ui-shadow-inset ui-btn-corner-all ui-btn-shadow ui-icon-searchfield ui-body-c">
        <%= text_field_tag :search, params[:search], "data-divider-theme" => "d", :placeholder => "Search Contacts", "class" => "ui-input-text ui-body-c" %>
      </div>
      <div class= "new_job_button">
        <%= link_to I18n.t('general.general.new'), new_material_path, "data-role" => "button", id: 'new-customer-button', "class" => "ui-btn ui-shadow ui-btn-corner-all ui-mini ui-btn-inline ui-btn-up-b" %>
      </div>
  <% end %>
</div>

<ul data-role="listview">
  <% @materials.each do |material| %>
      <li class="inline_mobile"><%= link_to material.name, material, "data-transition" => "slide" %>

      </li>
  <% end %>
</ul>








