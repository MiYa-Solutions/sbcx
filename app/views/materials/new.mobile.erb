<% provide(:title, I18n.t('general.general.new').html_safe + "&nbsp;".html_safe + @material.class.human_attribute_name(:material) ) %>


<%= simple_form_for @material, :html => {:class => 'form-horizontal'} do |f| %>


    <fieldset class="ui-grid-a ui-btn-inner-small">
      <div class="ui-block-a">
        <%= link_to I18n.t('general.general.back'), materials_path, "class" => "ui-btn-up-c", "data-role" => "button", "data-icon" => "arrow-l", "data-iconpos" => "left" %>
      </div>
      <div class="ui-block-b">
          <%= f.submit I18n.t('general.general.Save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'save_material_btn', "data-icon" => "check", "data-iconpos" => "left" %>
      </div>
    </fieldset>


    <% if f.object.errors.any? %>
        <%= render 'shared/error_messages', object: f.object %>
    <% end %>

    <%= render 'fields', f: f %>

      <%= f.submit I18n.t('general.general.Save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'create-material-btn', "data-icon" => "check", "data-iconpos" => "left" %>


<% end %>
