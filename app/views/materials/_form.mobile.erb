<% material ||= Material.new %>

<div class="add_new_part">

  <%= simple_form_for material, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.error_notification %>

      <%= render 'fields', f: f %>

      <div class="miya_blue_button">
        <%= f.submit I18n.t('general.general.Save'), "class" => "ui-btn-up-b", "data-role" => "button", "data-theme" => "b", id: 'create-material-btn', "data-icon" => "check", "data-iconpos" => "left" %>
      </div>

  <% end %>

</div>