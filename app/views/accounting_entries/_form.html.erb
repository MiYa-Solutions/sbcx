<%= simple_form_for(@accounting_entry, :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :status %>

      <%= f.input :event_id %>

      <%= f.input :amount_cents %>

      <%= f.input :amount_currency %>

      <%= f.input :ticket_id %>

      <%= f.input :account_id %>

    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
