    <div class="row-fluid add_part_service_call">
      <div class="alert add_part_frame">

        <ul>
          <li></li>
          <li class="quantity_field">
            <div class="input-prepend input-append">
              <span class="add-on"><%= AdjustmentEntry.human_attribute_name(:amount) %></span>
              <%= f.text_field :amount %>
            </div>

          </li>
          <li class="quantity_field">
            <div class="input-prepend input-append">
              <span class="add-on"><%= AdjustmentEntry.human_attribute_name(:ticket) %></span>
