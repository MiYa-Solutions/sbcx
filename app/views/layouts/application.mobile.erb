<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title><%= h(yield(:title) || "Untitled") %></title>
  <%= javascript_include_tag "application" %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" %>
  <%= javascript_include_tag "http://code.jquery.com/jquery-1.8.2.min.js", "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js", "mobile.js" %>
  <%= csrf_meta_tag %>

</head>
<body>
<div data-role="page">

  <div data-role="header">
    <%= render 'layouts/header' %>

  </div>
  <!-- /header -->

  <div data-role="content">
    <% unless flash.empty? %>
        <div class="info">
          <%- flash.each do |name, msg| -%>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <%- end -%>
        </div>
    <% end %>

    <%= yield %>

  </div>
  <!-- /content -->

  <div data-role="footer">
    <h4><%= current_user.try(:email) %></h4>
  </div>
  <!-- /footer -->
</div>
<!-- /page -->
</body>
</html>