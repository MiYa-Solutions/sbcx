<div data-role="header">

    <img border="0" src="/assets/logo2.png" alt="MiYa" style="float:left; display:inline"/>

    <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete, class: "ui-btn-right ui-btn ui-shadow ui-btn-corner-all ui-btn-icon-left ui-btn-up-a", data: { ajax: "false", icon: "gear", corners: "true", shadow: "true", iconshadow: "true", wrapperels: "span", theme: "a" } do %>
            <span class="ui-btn-inner ui-btn-corner-all ui-btn-up-b"><span class="ui-btn-text ">Sign Out</span><span class="ui-icon ui-icon-gear ui-icon-shadow">&nbsp;</span></span></a>
        <% end %>
    <% else %>
        <%= link_to new_user_session_path, class: "ui-btn-right ui-btn ui-shadow ui-btn-corner-all ui-btn-icon-left ui-btn-up-a", data: { icon: "gear", corners: "true", shadow: "true", iconshadow: "true", wrapperels: "span", theme: "a" } do %>
            <span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text">Sign In</span><span class="ui-icon ui-icon-gear ui-icon-shadow">&nbsp;</span></span></a>
        <% end %>
    <% end %>
  <br>
  <br>
  <h1><%= yield(:title) || "Untitled" %></h1>


</div>


