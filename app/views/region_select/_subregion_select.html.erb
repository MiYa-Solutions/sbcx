<div id="state_code_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
      <%= subregion_select(:state, :state_code, 'US') %>
  <% elsif country.subregions? %>
      <%= subregion_select(:state, :state_code, parent_region) %>
  <% else %>
      <%= text_field(:state, :state_code) %>
  <% end %>
</div>