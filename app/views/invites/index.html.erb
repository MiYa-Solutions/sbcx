<h1>Listing invites</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Organization</th>
    <th>Affiliate</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.message %></td>
        <td><%= invite.organization.name %></td>
        <td><%= invite.affiliate.name %></td>
        <td><%= invite.human_status_name %></td>
        <td><%= link_to 'Show', invite %></td>
      </tr>
  <% end %>
</table>

