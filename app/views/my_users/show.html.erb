<% provide(:title, @my_user.email) %>

<div class="well">

  <div class="row-fluid">
    <div class="span5">
      <div class="smart_label">
        <ul>
          <li><h1><%= @my_user.first_name %> <%= @my_user.last_name  %></h1></li>
          <li><%= link_to 'Reset', my_users_path, :class => 'btn btn-large btn-info' %></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span5">
      <table class="table table-striped table-condensed">
        <tbody>
        <tr>
          <td>Email:</td>
          <td><h4><%= @my_user.email %></h4></td>
        </tr>
        <tr>
          <td>Company:</td>
          <td><h4><%= @my_user.company  %></h4></td>
        </tr>
        <tr>
          <td>Address:</td>
          <td><h4><%= @my_user.address1 %> <%= @my_user.address2 %></h4></td>
        </tr>
        <tr>
          <td>City:</td>
          <td><h4><%= @my_user.city  %></h4></td>
        </tr>
        <tr>
          <td>State:</td>
          <td><h4><%= @my_user.state  %></h4></td>
        </tr>
        <tr>
          <td>zip:</td>
          <td><h4><%= @my_user.zip  %></h4></td>
        </tr>
        <tr>
          <td>Country:</td>
          <td><h4><%= @my_user.country  %></h4></td>
        </tr>
        <tr>
          <td>Phone:</td>
          <td><h4><%= @my_user.phone  %></h4></td>
        </tr>
        <tr>
          <td>Mobile Phone:</td>
          <td><h4><%= @my_user.mobile_phone  %></h4></td>
        </tr>
        <tr>
          <td>Work Phone:</td>
          <td><h4><%= @my_user.work_phone  %></h4></td>
        </tr>
        <tr>
          <td>Email:</td>
          <td><h4><%= @my_user.email %></h4></td>
        </tr>
        <tr>
          <td>First Name:</td>
          <td><h4><%= @my_user.first_name %></h4></td>
        </tr>

        <tr>
          <td>Roles:</td>
          <td>
            <% for role in @my_user.roles %>
                <table>
                  <tbody>
                  <tr>
                    <span class="label label-info"><%= role.name %></span>
                  </tr>
                  </tbody>
                </table>
            <% end %>
          </td>
        </tr>
        </tbody>
      </table>

    </div>
  </div>


  <div class="form-actions">
    <%= link_to 'Back', my_users_path, :class => 'btn btn-medium' %>
    <%= link_to 'Edit', edit_my_user_path(@my_user), :class => 'btn btn-medium btn-primary' %>
    <%= link_to 'Archive', my_users_path(@my_user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>
  </div>


</div>
