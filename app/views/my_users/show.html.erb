<% provide(:title, @my_user.email) %>

<div class="well">

<div class="row-fluid">
  <div class="span5">
    <div class="smart_label"  >
      <ul>
        <li><h1>The Name</h1> </li>
        <li><%= link_to 'Reset' , my_users_path, :class => 'btn btn-large btn-info' %></li>
      </ul>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span5">
    <table class="table table-striped table-condensed">
      <tbody>
      <tr>
        <td>User ID:</td>
        <td><h4><%= @my_user.id %></h4></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><h4><%= @my_user.email %></h4></td>
      </tr>
      <tr>
        <td>Roles:</td>
        <td>
          <% for role in @my_user.roles %>
              <table>
                <tbody>
                <tr>
                  <span class="label label-info"><%= role.name %></span>
                </tr>
                </tbody>
              </table>
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>


  <div class="form-actions">
        <%= link_to 'Back', my_users_path, :class => 'btn btn-medium' %>
        <%= link_to 'Edit', edit_my_user_path(@my_user), :class => 'btn btn-medium btn-primary' %>
        <%= link_to 'Archive', my_users_path(@my_user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-medium btn-danger' %>
  </div>




</div>
