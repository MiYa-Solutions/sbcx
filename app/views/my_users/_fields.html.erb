<%= f.error_notification %>

<div class="span6">
    <%= f.input :first_name, :autofocus => true, :required => true  %>
    <%= f.input :last_name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation%>
    <%= f.input :company %>
    <%= f.association :roles, collection: applicable_user_roles, as: :check_boxes %>

</div>

<div class="span6">

    <%= f.input :address1 %>
    <%= f.input :address2 %>

    <%= f.input :city %>
    <%= f.input :zip %>
    <div class="control-group string mandatory">
          <label class="string optional control-label" for="customer_country">Country</label>
              <div class="controls">
            <%= f.country_select :country, { priority: %w[US] }, id: 'country' %>
          </div>

    </div>

    <div class="control-group string mandatory">
          <label class="string optional control-label" for="customer_state">State</label>
            <div class="controls">
              <%= render 'subregion_select', f: f %>
            </div>
    </div>

    <%= f.input :phone %>
    <%= f.input :mobile_phone %>
    <%= f.input :work_phone %>

</div>



