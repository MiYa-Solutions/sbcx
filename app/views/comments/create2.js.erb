<% if @comment.errors.any? %>

<% if @bom.errors[:body].empty? %>
$('#comment_body').parent().removeClass('control-group error')
$('#comment_body').siblings('.error-msg').remove()
<% else %>
$('#comment_body').parent().addClass('control-group error')
$('#comment_body').siblings('.error-msg').remove()

<% end %>
<% else %>
t = $('#new_body').find('textarea')
t.removeClass('uneditable-input')
t.removeAttr('disabled', 'disabled')
t.val('')
$('#comment_body').find('.error').removeClass('error');
$('#comment_body').find('.error-msg').remove();
$('#comment_body').val('');

$('#comments div:first').before('<%= j render(@comment) %>');
<% end %>
