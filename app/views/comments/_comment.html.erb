<div id="comment-<%= comment.id %>">
    <tr>
        <td><%= comment.user.name %></td>
        <td><%= l comment.created_at %></td>
        <td><%= comment.body %></td>
         <td>
           <%= link_to t('general.general.delete'), comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, :class => 'btn btn-mini btn-danger' %>
         </td>

    </tr>
</div>

