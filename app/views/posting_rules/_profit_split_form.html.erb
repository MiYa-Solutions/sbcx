<div class="posting_rules_inputs" xmlns="http://www.w3.org/1999/html">

<div class="agreement_posting_rules">

<%= simple_form_for(@posting_rule, as: :posting_rule, url: agreement_posting_rules_url(@posting_rule.agreement), method: :post, :html => { :class => 'form-horizontal' }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <div class="row-fluid">

          <p><%= I18n.t('general.messages.profit_split_m1') %></p><br>
          <%= f.hidden_field :agreement_id %>
          <%= f.hidden_field :type, value: @posting_rule.class.name.underscore %>

          <div class="agreement_profit_split">
            <ul>
              <li>
                <%= f.input :rate %>
                <%= f.hidden_field :rate_type, value: @posting_rule.rate_types.first %>
              </li>
              <li>
                <%= link_to I18n.t('general.general.advanced_settings'), '#', :class => 'btn btn-small', id: 'advanced-rule-button', data: { toggle: "collapse", target: "#advanced_posting_rules" }  %>
              </li>
              <li></li>
           </ul>
          </div>
          <br>

        </div>
       <div class="row-fluid">

          <div id="advanced_posting_rules" class="collapse">
            <br>
            <p>
              <%= I18n.t('general.messages.profit_split_m2') %>
              <%= link_to I18n.t('general.general.see_example'), '#', :class => 'btn btn-mini', id: 'advanced-rule-example-button', data: { toggle: "collapse", target: "#advanced_posting_rules_example" }  %>
              <br>
            </p>

            <div class="row"></div>
            <div class="row-fluid">
             <div id="advanced_posting_rules_example" class="collapse">
             <p><small> <%= I18n.t('general.messages.profit_split_m3').html_safe %></small></p>
             </div>
            </div>

            <br>

              <div class="agreement_profit_split">
                    <ul>
                        <li>
                          <%= f.input :cash_rate %>
                        </li>
                      <li></li>
                        <li>
                            <div class="control-group string mandatory profit_split_dropdown">
                                 <label class="string optional control-label" for="provider_country"><%= PostingRule.human_attribute_name(:cash_rate_type) %></label>
                                    <div class="controls">
                                        <%= f.select :cash_rate_type, profit_split_payment_rates %>
                                    </div>
                            </div>
                        </li>
                      </ul>
                </div>

              <div class="agreement_profit_split">
                    <ul>
                      <li>
                        <%= f.input :credit_rate %>
                      </li>
                      <li>
                        <div class="control-group string mandatory profit_split_dropdown">
                          <label class="string optional control-label" for="provider_country"><%= PostingRule.human_attribute_name(:credit_rate_type) %></label>
                          <div class="controls">
                            <%= f.select :credit_rate_type, profit_split_payment_rates %>
                          </div>
                        </div>
                      </li>
                    </ul>
              </div>

              <div class="agreement_profit_split">
                    <ul>
                      <li>
                        <%= f.input :amex_rate %>
                      </li>
                      <li>
                        <div class="control-group string mandatory profit_split_dropdown">
                        <label class="string optional control-label" for="provider_country"><%= PostingRule.human_attribute_name(:amex_rate_type) %></label>
                        <div class="controls">
                          <%= f.select :amex_rate_type, profit_split_payment_rates %>
                        </div>
                      </div>
                      </li>
                    </ul>
              </div>

              <div class="agreement_profit_split">
                    <ul>
                      <li>
                        <%= f.input :cheque_rate %>
                      </li>
                      <li>
                        <div class="control-group string mandatory profit_split_dropdown">
                            <label class="string optional control-label" for="provider_country"><%= PostingRule.human_attribute_name(:cheque_rate_type) %></label>
                            <div class="controls">
                            <%= f.select :cheque_rate_type, profit_split_payment_rates %>
                            </div>
                        </div>
                      </li>
                    </ul>
              </div>
            <!--end collapse-->
          </div>

      </div>

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn btn-primary', :id => 'submit_posting_rules' %>
    </div>

<% end %>
</div>
</div>