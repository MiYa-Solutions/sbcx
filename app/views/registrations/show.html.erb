<% provide(:title, @organization.name) %>

<div class="well well_height">

  <div class="row-fluid">
    <div class="span6">
      <div class="smart_label">
        <ul>
          <li><h1>My Profile</h1></li>
          <li>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span6">
      <table class="table table-striped table-condensed" id="org_details_in_my_profile">
        <tbody>
        <tr>
          <td>Name:</td>
          <td><h4><%= @current_user.first_name %> <%= @current_user.last_name %></h4></td>
        </tr>
        <tr>
          <td><%= Organization.human_attribute_name(:industry) %></td>
          <td><h4><%= @current_user.organization.industry_name %></h4></td>
        </tr>
        <tr>
          <td>Email:</td>
          <td><h4><%= @current_user.email %></h4></td>
        </tr>
        <tr>
        <tr>
          <td>Phone:</td>
          <td><h4><%= @current_user.phone %></h4></td>
        </tr>
        <tr>
          <td>Mobile Phone:</td>
          <td><h4><%= @current_user.mobile_phone %></h4></td>
        </tr>
        <tr>
          <td>Work Phone:</td>
          <td><h4><%= @current_user.work_phone %></h4></td>
        </tr>
        <tr>
          <td>Timezone:</td>
          <td><h4><%= @current_user.time_zone %></h4></td>
        </tr>
        <tr>
          <td>Company Name:</td>
          <td><h4><%= @organization.name %></h4></td>
        </tr>
        <tr>
          <td>Company Address:</td>
          <td><h4><%= @organization.address1 %> <%= @organization.address2 %></h4></td>
        </tr>
        <tr>
          <td>City:</td>
          <td><h4><%= @organization.city %></h4></td>
        </tr>
        <tr>
          <td>State:</td>
          <td><h4><%= @organization.state %></h4></td>
        </tr>
        <tr>
          <td>Country:</td>
          <td><h4><%= @organization.country %></h4></td>
        </tr>
        <tr>
          <td>Zip:</td>
          <td><h4><%= @organization.zip %></h4></td>
        </tr>
        <tr>
          <td>Website:</td>
          <td><h4><%= @organization.website %></h4></td>
        </tr>
        <tr>
          <td>Users:</td>
          <td>
            <% for user in @users %>
                <table class="table_unstyled">
                  <tbody>
                  <tr>
                    <td>
                      <%= link_to user.email, my_user_path(user) %>
                    </td>
                    <td>
                      <% user.roles.each do |role| %>
                          (<%= role.name %>)
                      <% end %>
                    </td>
                  </tr>
                  </tbody>
                </table>
            <% end %>
          </td>
        </tr>
        </tbody>
      </table>
    </div>

  </div>


  <div class="form-actions" id="org_users">
    <!--<#%= link_to 'Edit', edit_organization_path, :class => 'btn btn-medium' %>-->
    <%= link_to 'Edit Profile', edit_user_registration_path, id: 'reset_password', :class => 'btn btn-medium btn-info', id: 'edit_profile' %>
  </div>

</div>