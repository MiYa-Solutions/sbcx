<div class="row-fluid" id="Sign-up">
  <div class="well">

    <h2>Register for a new account</h2>  </br>
<% resource.build_organization %>

<%= form_for(resource, :html => { :class => 'form-horizontal' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

        <div class="alert alert-block alert-error">
          <a class="close" data-dismiss="alert" href="#">Ã—</a>
                 <%= devise_error_messages! %>
        </div>

<fieldset>

      <h4>User Information:</h4>  </br>
      <div class="control-group">
        <label class="string required control-label" for="email">Email</label>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group string required">
        <label class="string optional control-label" for="password">Password</label>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group string required">
        <label class="string optional control-label" for="password_confirmation">Password</label>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

    <hr>

      <h4>Company/Organization Information:</h4>  </br>
      <%= f.simple_fields_for :organization_attributes, resource.organization do |fo| %>
          <%= render 'organizations/fields', f: fo %>
      <% end %>


      <div class="form-actions">
      <%= f.submit "Sign up", :class => 'btn btn-large btn-primary' %> </br>
      </div>


</fieldset>

<% end %>

  </div>
</div>