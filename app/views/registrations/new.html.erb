<% provide(:title, "sign-up") %>

<div class="well">

  <div class="row-fluid">
    <div class="smart_label">
      <h1>Register for a new account</h1>
    </div>
    <br>
  </div>

  <% resource.build_organization %>

  <div class="sign-up">
    <div class="row-fluid">

      <%= simple_form_for(resource, :html => { :class => 'form-horizontal' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

          <% if f.object.errors.any? %>
              <div class="alert alert-block alert-error">
                <a class="close" data-dismiss="alert" href="#">Ã—</a>
                <%= devise_error_messages! %>
              </div>
          <% end %>

          <div class="span6">

            <div class="alert alert-info">
              <h4>Login Information:</h4>
              </br>

              <%= f.input :email, hint: 'Email address is also your new user name' %>
              <%= f.input :password %>
              <%= f.input :password_confirmation, label: 'Confirm Password' %>

            </div>

            <div class="alert alert-info bottom_block">

              <h4>User Information:</h4>  </br>
              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :phone %>
              <%= f.input :mobile_phone %>
              <%= f.input :work_phone %>
            </div>

          </div>

          <div class="span6 left_block">
            <div class="alert alert-info">

              <h4>Company/Organization Information:</h4>  </br>
              <%= f.simple_fields_for :organization_attributes, @organization do |fo| %>
                  <%= render 'organizations/fields', f: fo %>
              <% end %>



            </div>
          </div>


          </div>


          <div class="form-actions">
            <%= link_to 'Back', root_path, :class => 'btn btn-large', id: 'back_from_sign_up' %>
            <%= f.submit "Sign up", :class => 'btn btn-large btn-primary' %> </br>
          </div>

      <% end %>


      </div>
</div>