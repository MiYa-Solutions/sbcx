<div class="row-fluid" id="Sign-up">
  <div class="well">

    <h2>Register for a new account</h2>
<% resource.build_organization %>

    <%= form_for(resource, :html => { :class => 'form-horizontal' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="alert alert-error">
                <%= devise_error_messages! %>
        </div>

        <fieldset>
     <legend class="hidden">Sign Up Form</legend>
       <div class="row">
            <div class="span8">
                 <div class="well form-inline">
                  <legend>User Information:</legend>

                   <div class="control-group string mandatory">
                     <label class="string optional control-label" for="email">Email</label>
                     <div class="controls">
                   <%= f.email_field :email, :class => 'input-large' %>
                     </div>
                   </div>

                   <div class="control-group string mandatory">
                     <label class="string optional control-label" for="password">Password</label>
                     <div class="controls">
                   <%= f.password_field :password %>
                     </div>
                   </div>

                   <div class="control-group string mandatory">
                     <label class="string optional control-label" for="password_confirmation">Password</label>
                     <div class="controls">
                   <%= f.password_field :password_confirmation %>
                     </div>
                   </div>

                </div>
            </div>
       </div>

  <div class="row">
      <div class="span8">
        <div class="well form-inline">
          <legend>Company/Organization Information:</legend>
              <%= f.simple_fields_for :organization_attributes, resource.organization do |fo| %>
              <%= render 'organizations/fields', f: fo %>
              <% end %>
        </div>
      </div>

  </div>

      <div class="form-actions">
        <%= f.submit "Sign up", :class => 'btn btn-primary' %>
        <%= link_to 'Forgot Password?', :new_user_password, :class => 'btn btn-info' %>
      </div>


</fieldset>

<% end %>

  </div>
</div>