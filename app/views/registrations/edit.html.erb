<% provide(:title, "Edit Profile") %>

<div class="well well_height">
  <div class="row-fluid">

      <div class="smart_label">

        <ul>
          <li><h1>Edit My User:</h1></li>
          <li>
            <button class="btn btn-danger btn-medium" data-toggle="collapse" data-target="#edit_password_in_edit_profile" id="edit_org_from_edit_profile">
              Reset Password
            </button>
            <% permitted_to? :edit, :organizations do %>
                <button class="btn btn-primary btn-medium" data-toggle="collapse" data-target="#edit_organization_in_edit_profile" id="edit_org_from_edit_profile">
                  Edit Organization
                </button>
            <% end %>
          </li>
        </ul>

      </div>
  </div>

  <br>

  <div class="row-fluid">
        <div class="span5 ">
            <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}, :html => {:class => 'form-horizontal'}) do |f| %>

              <%= f.error_notification %>

              <fieldset>
                  <%= f.input :email, :required => true %>
                  <%= f.input :first_name %>
                  <%= f.input :last_name %>
                  <%= f.input :phone %>
                  <%= f.input :mobile_phone %>
                  <%= f.input :work_phone %>
                <div class="control-group string mandatory">
                  <label class="string optional control-label" for="time_zone">Time Zone</label>

                  <div class="controls">
                    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
                  </div>
                </div>



                  <%= f.input :current_password %>

                <div class="form-actions">
                  <%= link_to 'Back', profile_path, :class => 'btn btn-medium', id: 'back_from_edit_profile' %>
                  <%= f.submit "Save Changes", class: "btn btn-medium btn-primary", id: 'save_profile_changes' %>
                </div>
             <% end %>
             </fieldset>

                <!--<br>-->
               <!---->
                    <!--<div class="smart_label">-->
                      <!--<ul>-->
                        <!--<li>-->
                          <!--<h2>Login Info:</h2>-->
                        <!--</li>-->
                        <!--<li>-->
                        <!--</li>-->
                      <!--</ul>-->
                    <!--</div>-->

              <br>


          <!--<p><strong>Unhappy?</strong>-->
          <!--<#%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, class: "btn btn-medium btn-danger", :id => "cancel_my_account" %>-->
          <!--</p>-->



        </div>


    <div class="span6">

              <div id="edit_organization_in_edit_profile" class="collapse">

              <%= simple_form_for @organization, :html => {:class => 'form-horizontal'}, :remote => true do |f| %>
                  <%= render 'organizations/fields', f: f %>
                  <div class="form-actions">
                    <button class="btn btn-medium" data-toggle="collapse" data-target="#edit_organization_in_edit_profile" id="edit_org_from_edit_profile">
                      cancel
                    </button>
                    <%= f.submit "Save Changes", class: "btn btn-medium btn-primary", :id => "save_org_from_edit_profile" %>
                  </div>
              <% end %>

            </div>

             <div id="edit_password_in_edit_profile" class="collapse">

               <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}, :html => {:class => 'form-horizontal'}) do |f| %>
                   </fieldset>
                   <%= f.error_notification %>
                   <%= f.input :password, :hint => "Leave blank if you wish to keep current password", :required => false, :label => "New Password" %>
                   <%= f.input :password_confirmation, :required => false, :label => "Confirm New Password" %>
                   <%= f.input :current_password, :hint => "Enter your current password to confirm changes", :required => false %>

                   <div class="form-actions">
                     <button class="btn btn-medium" data-toggle="collapse" data-target="#edit_password_in_edit_profile" id="edit_org_from_edit_profile">
                       cancel
                     </button>

                     <%= f.submit "Save Changes", class: "btn btn-medium btn-primary", id: 'save_password_changes' %>
                   </div>
                   </fieldset>
               <% end %>
             </div>

      </div>

  </div>


 </div>
