<div class="billing-component span4" id={{element_id}}>
    <div class="row-fluid">
        <div class="span2"></div>

        <div class="span8">
            <h3>Customer Billing</h3>
            <h4>{{name}}</h4>
        </div>
        <div class="span2">
        </div>

    </div>
    <hr>

    {{> partials/job/_customer_status }}
    <div class="row-fluid">
        <div class="span6 billing" id="show_customer_entries">
            <a href="#job_customer_comp_modal" class="row-fluid" data-toggle="modal">
               <span class="strong" rel="tooltip"
                     data-original-title="The contractor has enabled you to collect a payment from the customer. Click to collect a payment...">
                    Collect...
                    <i class="icon-chevron-down"/>
               </span>
            </a>

        </div>

    </div>
</div>
<div id='job_customer_comp_modal' class='modal hide fade' tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-header">

        <div class="title_label customer_title customer_billing_title">
            <ul>
                <li><h1>Customer Payment Collection: {{name}}</h1></li>
                <li>
                </li>

                <li>
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                </li>
            </ul>
        </div>

    </div>

    <div class="modal-body">

        <div class="row-fluid">
            <div class="span3"></div>
            <div class="span6">
                <div class="well">

                    {{> partials/job/_accounting_entry_form}}

                </div>
            </div>
            <div class="span3"></div>
        </div>
        <ul/>
        <div class="title_label customer_title customer_billing_title">
            <ul>
                <li>
                </li>
                <li>
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>

                </li>
            </ul>
        </div>


    </div>
</div>